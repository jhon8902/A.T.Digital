---
let dynamicElectricos: any[] = [];

// Traemos dinámicas desde Netlify
try {
  const res = await fetch("http://localhost:8888/.netlify/functions/get-notes");
  if (res.ok) {
    const data = await res.json();

    // Filtramos solo categoría "electricos"
    dynamicElectricos = data
      .filter((note: any) => note.category?.toLowerCase() === "electricos")

      .map((note: any) => ({
        href: `/notas/${note.id}`,
        img: note.image1 || "/img/default.jpg",
        alt: note.title,
        title: note.title,
        description: note.subtitle || "",
        fecha: `Publicado: ${new Date(note.created_at).toLocaleDateString("es-CO")}`,
      }));
  }
} catch (err) {
  console.error("Error cargando eléctricos dinámicos:", err);
}

// Notas estáticas
const staticElectricos = [
  {
    href: "/notas-electricos/nota-volvo-ex90",
    img: "../img/volvo-ex90-electrico/volvo-ex90-portada.webp",
    alt: "Volvo EX90",
    title: "Volvo EX90",
    description:
      "No solo ofrece una autonomía de 500km sino que además llega con nuevo diseño vanguardista, es una de las más cotizadas en Colombia.",
    fecha: "Nota: 10-feb",
  },
  {
    href: "/notas-electricos/nota-mini-cooper",
    img: "../img/mini-cooper-electrico/mini-cooper-portada.webp",
    alt: "Mini Cooper",
    title: "Mini Cooper",
    description:
      "Lujo y tecnología en un compacto eléctrico capaz de satisfacer todas tus necesidades básicas y de confort.",
    fecha: "Nota: 13-mar",
  },
  {
    href: "/notas-electricos/nota-byd-sealion7",
    img: "/img/byd-sealion-7/byd-sealion7-principal.webp",
    alt: "BYD Sealion 7",
    title: "BYD Sealion 7",
    description:
      "Deportivo y sostenible sin perder su esencia, el diseño y lujo se combinan para ofrecer lo mejor.",
    fecha: "Nota: 13-mar",
  },
  {
    href: "/notas-electricos/nota-peugeot-e3008",
    img: "/img/peugeot-3008-electrica/carga-peugeot.webp",
    alt: "Peugeot E-3008",
    title: "Peugeot E-3008",
    description:
      "Eléctrico y potente para la nueva era: si lo que quieres es que te vean, con este SUV lo logras.",
    fecha: "Nota: 24-mar",
  },
  {
    href: "/notas-electricos/nota-renault-megane",
    img: "/img/renault-megane-e-tech/renault-megane-principal.webp",
    alt: "Renault Megane",
    title: "Renault Megane",
    description:
      "Compacto y eficiente para la movilidad urbana, además de futurista que compensa cualquier pero.",
    fecha: "Nota: 20-abril",
  },
];

// Juntamos dinámicas + estáticas
const allElectricos = [...dynamicElectricos, ...staticElectricos].slice(0, 5);
---

<div id="electricos" class="electrico-container">
  <div class="central-content">
    <span class="icono-electricos">
      <i class="fas fa-car-battery"></i>
    </span>
    <span class="titulo-electricos inicial">Carros Eléctricos</span>
    <p class="descripcion-electricos">
      Modelos 100% eléctricos disponibles en el mercado nacional: autonomía,
      tiempos de carga, conectividad y más.
    </p>
  </div>

  <div class="grid-container">
    {
      allElectricos.length > 0 && (
        <div class="imagen-destacada nueva-destacada">
          <a href={allElectricos[0].href} class="destacada-link">
            <div class="imagen-destacada-img">
              <img
                src={allElectricos[0].img}
                alt={allElectricos[0].alt}
                class="electrico-imagen"
              />
            </div>
            <div class="texto-destacado">
              <p class="texto-f">{allElectricos[0].fecha}</p>
              <h2>{allElectricos[0].title}</h2>
              <p>{allElectricos[0].description}</p>
            </div>
          </a>
        </div>
      )
    }
  </div>

  <div class="imagenes-grid">
    {
      allElectricos.slice(1).map((nota) => (
        <div class="imagen-card">
          <a href={nota.href}>
            <img src={nota.img} alt={nota.alt} />
            <h2>{nota.title}</h2>
            <p>{nota.description}</p>
            <p class="texto-f">{nota.fecha}</p>
          </a>
        </div>
      ))
    }
  </div>

  <div class="ver-mas-modelos-container">
    <button class="ver-mas-modelos-btn">Ver más modelos</button>
  </div>
</div>

<style>
  /* Contenedor principal */
  .electrico-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(to bottom, #4b5563 30%, #4b5563 40%);
    border-bottom: 20px solid rgb(250, 250, 250);
    scroll-margin-top: 100px;
    text-align: center;
    width: 100%;
    font-family: "Georgia", serif;
  }

  @keyframes fadeInTitle {
    from {
      opacity: 0;
      transform: translateY(-40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .central-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 0;
    margin: 0;
    padding: 40px 0 0 0;
    /*background: #4b5563;*/
  }

  .central-content h1 {
    color: white;

    text-transform: uppercase;
    font-weight: bolder;
    letter-spacing: 1px;
    position: relative;
    white-space: nowrap;
    z-index: 3;
    text-shadow: 2px 2px 6px rgba(16, 16, 16, 0.2);
    padding: 80px;

    display: flex;
    align-items: center;
    justify-content: center;
    gap: 14px;
  }

  .descripcion-electricos {
    font-size: 1.8rem;
    text-align: center;
    color: rgb(224, 224, 224);
    padding: 20px; /* Top reducido, laterales igual, bottom cero */
    font-family: "Georgia", serif;
    margin-top: -10px; /* (Opcional) más pegado aún si lo ves necesario */
    margin-top: -20px;
    font-weight: 600;
  }

  .icono-electricos {
    animation: pulse-move 2s ease-in-out infinite;
  }

  .icono-electricos i {
    font-size: 70px;
    color: #05aafc;
    margin-right: 14px;
  }

  @keyframes pulse-move {
    0% {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
    50% {
      transform: translateY(-8px) scale(1.1);
      opacity: 0.85;
    }
    100% {
      transform: translateY(0) scale(1);
      opacity: 1;
    }
  }

  .titulo-electricos {
    font-size: clamp(40px, 5vw, 60px);
    font-weight: 700;
    color: white;

    font-weight: bolder;
    text-transform: uppercase;
    letter-spacing: 1px;
    text-shadow: 2px 2px 6px rgba(16, 16, 16, 0.2);
    margin-top: 10px;
    animation: fadeInUp 1s 0.2s both;

    opacity: 0;
    transform: translateY(40px);
    transition:
      opacity 0.2s ease-in-out,
      transform 0.2s ease-in-out;
  }

  .grid-container {
    width: 100%;
    max-width: none;
    display: flex;
    justify-content: center;
    margin: 0;
    padding: 0;
  }

  .nueva-destacada {
    width: 100%;
    max-width: none;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    align-items: stretch;
    background: #4b5563;
    margin-top: 40px;
    overflow: hidden;
    border-radius: 10px;
  }

  .destacada-link {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    text-decoration: none;
    color: inherit;
    width: 100%;
  }

  .texto-destacado {
    flex: 1;
    padding: 40px 30px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: white;
    color: black;
    text-align: left;

    font-weight: 500;
  }

  .texto-destacado h2 {
    font-size: 48px;
    margin-bottom: 15px;
    text-transform: uppercase;
    font-weight: bold;
    color: black;
  }

  .texto-destacado p {
    font-size: 24px;
    font-weight: 600;
    line-height: 1.4;
    margin-bottom: 10px;
    font-family: "Georgia", serif;
  }

  .texto-destacado .texto-f {
    font-size: 18px;
    margin-bottom: 10px;
    color: black;
    border-bottom: 4px solid #0689ca;
    width: 38%;
    display: inline-block;
    padding: 5px;
  }

  .imagen-destacada-img {
    flex: 1;
    min-width: 300px;
    max-height: 100%;
    overflow: hidden;
  }

  .imagen-destacada-img img,
  .imagen-card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;

    transition: transform 0.2s cubic-bezier(0.2, 0, 0.2, 1);
  }

  .imagen-destacada-img img:hover,
  .imagen-card img:hover {
    transform: scale(1.08);
    z-index: 2;
  }

  .imagenes-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 10px;
    width: 100%;
    max-width: none;
    margin-top: 40px;

    padding: 10px; /* Elimina el padding lateral */
  }

  .imagen-card {
    overflow: hidden;
    text-align: center;
    position: relative;
    background: white;
  }

  .imagen-card img {
    width: 100%;
    height: 290px;
    object-fit: cover;
    position: relative;
    display: block;
  }

  .imagen-card h2 {
    font-size: 22px;
    font-weight: 600;
    color: black;
    border-bottom: 3px solid #0689ca;
    padding: 20px;
    text-align: start;
    position: relative;
    display: block;
    width: 90%;

    text-transform: uppercase;
  }

  .imagen-card p {
    font-size: 20px;
    padding: 20px;
    padding-top: 10px;
    font-weight: 600;
    color: black;
    text-align: start;
    text-transform: none;
  }

  .imagen-card .texto-f {
    font-size: 16px;
    color: black;
    position: absolute;
    top: 10px;
    left: 10px;
    padding: 5px 10px;
    z-index: 2;
    text-align: left;
    text-transform: none;
    border-bottom: 1px solid black;
    display: inline-block;
  }

  .ver-mas-modelos-container {
    width: 100%;
    display: flex;
    justify-content: center;
    margin: 30px 0 30px 0;
    padding: 30px;
  }

  .ver-mas-modelos-btn {
    background: #097db7;
    color: white;
    font-size: 22px;

    font-weight: 600;
    border: none;
    border-radius: 8px;
    padding: 16px 38px;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: background 0.2s;
  }

  .ver-mas-modelos-btn:hover {
    background: #056fa1;
  }

  @media (max-width: 768px) {
    .electrico-container {
      padding: 0;
    }

    .titulo-electricos {
      font-size: 27px;
      padding: 5px;
    }

    .descripcion-electricos {
      width: 100%;
      padding: 0 15px; /* espacio lateral */
      margin: 5px 0; /* espacio arriba y abajo */
      font-size: 1.1rem;
      text-align: center;
      line-height: 1.5; /* mejor lectura */
      display: block;
      box-sizing: border-box;
    }

    .icono-electricos i {
      font-size: 40px;
      padding-top: 40px;
    }

    .imagenes-grid {
      grid-template-columns: 1fr;
    }

    .texto-destacado {
      text-align: center;
      padding: 10px 10px;
    }

    .texto-destacado h2 {
      font-size: 28px;
    }

    .texto-destacado p {
      font-size: 18px;
      padding: 10px;
    }

    .texto-destacado .texto-f {
      text-align: center;
      width: 100%;
      font-size: 16px;
    }

    .central-content {
      padding: 0;
    }

    .central-content h1 {
      display: flex;
      flex-direction: column-reverse; /* Cambia el orden: título arriba, icono abajo */
      align-items: center;
      justify-content: center;
      font-size: 44px;
      text-align: center;
      padding: 20px;
      gap: 0;
      margin: 0;
    }

    .icono-electricos {
      margin-top: 10px;
      margin-bottom: 0;
    }

    .icono-electricos i {
      margin-bottom: 10px;
      font-size: 60px;
    }

    .imagen-card img {
      width: 100%;
      height: 250px;
    }

    .imagen-card h2 {
      font-size: 20px;
      padding: 10px;
      padding-top: 10px;
      font-weight: 600;
    }

    .imagen-card p {
      font-size: 18px;
      font-weight: 600;
      color: black;
      padding: 10px;
    }

    .imagen-card .texto-f {
      font-size: 12px;
    }

    .ver-mas-modelos-container {
      padding: 20px;
      margin: 0;
    }

    .ver-mas-modelos-btn {
      padding: 10px 20px; /* Un poco más de área táctil */
      font-size: 1rem;
    }

    .ver-mas-modelos-btn {
      margin-bottom: 10px; /* Más aire en móviles */
      padding-top: 10px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const seccion = document.getElementById("electricos");
    const titulo = document.querySelector(".titulo-electricos");

    if (!seccion || !(titulo instanceof HTMLElement)) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            titulo.classList.remove("inicial");
            titulo.style.animation = "fadeInUp 1s 0.2s both";
          } else {
            titulo.classList.add("inicial");
            titulo.style.animation = "none";
          }
        });
      },
      { threshold: 0.1 }
    );

    observer.observe(seccion);

    // Si ya está en viewport al cargar
    function isInViewport(element) {
      const rect = element.getBoundingClientRect();
      return rect.top < window.innerHeight && rect.bottom > 0;
    }

    if (isInViewport(seccion)) {
      titulo.classList.remove("inicial");
      titulo.style.animation = "fadeInUp 1s 0.2s both";
    }
  });
</script>
