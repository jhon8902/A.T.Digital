<section id="test-drive" class="test-drive-container">
  <div class="central-content">
    <h1>TEST DRIVE videos</h1>
    <p class="texto-principal">
      Ponemos a prueba todos los vehiculos, te contamos lo mas relevante de cada
      una de las marcas
    </p>
  </div>
  <div class="video video-grande">
    <video controls class="video-element video-grande-element">
      <source src="../img/videos-pruebas/ford f-150.mp4" type="video/mp4" />
      Tu navegador no soporta el elemento de video.
    </video>
    <div class="video-texto">
      <h2>Modelo Destacado</h2>
      <p>Descubre la emoción de nuestro modelo estrella.</p>
    </div>
  </div>
  <div class="videos-container">
    <div class="video">
      <video controls class="video-element">
        <source src="../img/videos-pruebas/prueba-mazda.mp4" type="video/mp4" />
        Tu navegador no soporta el elemento de video.
      </video>
      <div class="video-texto">
        <h2>Mazda Iconic</h2>
        <p>Conduce con estilo y eficiencia.</p>
      </div>
    </div>
    <div class="video">
      <video controls class="video-element">
        <source
          src="../img/videos-pruebas/nissan qashqai.mp4"
          type="video/mp4"
        />
        Tu navegador no soporta el elemento de video.
      </video>
      <div class="video-texto">
        <h2>Nissan Qashqai</h2>
        <p>Innovación en cada recorrido descubrelo.</p>
      </div>
    </div>
    <div class="video">
      <video controls class="video-element">
        <source src="../img/videos-pruebas/xiaomi YU7.mp4" type="video/mp4" />
        Tu navegador no soporta el elemento de video.
      </video>
      <div class="video-texto">
        <h2>Xiaomi YU7</h2>
        <p>Diseño y tecnología en armonía.</p>
      </div>
    </div>
  </div>
  <div class="ver-mas-container">
    <button class="ver-mas">Ver más</button>
  </div>
</section>

<style>
  .test-drive-container {
    display: grid;
    place-items: center;
    grid-template-columns: 1fr;
    gap: 50px;
    background: linear-gradient(to bottom, #000 70%, #fff 30%);
    padding: 20px;
    text-align: center;

    cursor: pointer;
  }

  .central-content {
    grid-row: 1;
  }

  .test-drive-container h1 {
    overflow: hidden;
    white-space: nowrap;
    font-family: "Georgia", serif;
    font-size: 60px;
    font-weight: bolder;
    color: #e2b009;
    text-transform: uppercase;
    width: 0;
    padding: 10px 30px 10px 30px; /* arriba, derecha, abajo, izquierda */
  }

  /* animacion titulo */
  .animate-typing {
    animation:
      typing 1s steps(30, end) forwards,
      glow 2s ease-in-out infinite alternate;
  }

  /* animacion escritura titulo */

  @keyframes typing {
    from {
      width: 0;
    }
    to {
      width: 100%;
    }
  }

  .central-content .texto-principal {
    font-size: 28px;
    color: white;
    margin-bottom: 20px;
  }

  .test-drive-container p {
    font-size: 20px;
    color: black;
    margin-bottom: 20px;
    font-family: "Poppins", sans-serif;
    text-transform: none;
  }

  .video-grande {
    width: 100%;
    max-width: 1200px;
    height: 800px;
    margin: 0 auto;
  }

  .videos-container {
    display: flex;
    justify-content: space-between;
    max-width: 100%;
    flex-wrap: wrap;
  }

  .videos-container .video-element {
    height: 300px;
    max-height: 300px;
  }

  .video {
    position: relative;
    background-color: #f9f9f9;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);
    transition: transform 0.6s ease;
    flex: 1;
    margin: 10px;
    max-width: 100%;
  }

  .video:hover {
    transform: translateY(-10px);
  }

  .video-element {
    width: 100%;
    height: 600px;
    object-fit: cover;
    border-radius: 5px;
  }

  .video-texto {
    background: white;
    color: black;
    padding: 20px;
    text-align: center;
    margin-top: 10px;
  }

  .video-texto h2 {
    font-size: 46px;
    margin-bottom: 10px;
    color: black;
    font-weight: 600;
    font-family: "Georgia", serif;
  }

  .video-texto p {
    font-size: 20px;
    color: black;
  }

  .ver-mas-container {
    text-align: center;
    margin-top: 20px;
  }

  .ver-mas {
    padding: 10px 20px;
    font-size: 18px;
    color: white;
    background-color: black;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ver-mas:hover {
    background-color: #ae7906;
    color: black;
    transform: scale(1.1);
  }

  /* Estilos responsivos */
  @media (max-width: 768px) {
    .videos-container {
      flex-direction: column;
    }

    .videos-container .video-element {
      height: 200px;
      max-height: 200px;
    }

    .test-drive-container h1 {
      font-size: 30px;
    }

    .central-content .texto-principal {
      font-size: 23px;
    }

    .video {
      margin: 10px 0;
    }

    .video-grande {
      height: 90%;
    }

    .video-texto h2 {
      font-size: 24px;
    }

    .video-texto p {
      font-size: 16px;
    }
    .video-element {
      height: auto;
    }
  }
</style>

<script>
  window.addEventListener("DOMContentLoaded", () => {
    const target = document.querySelector("#test-drive h1");

    if (!(target instanceof HTMLElement)) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            target.classList.remove("animate-typing");
            target.style.width = "0"; // Oculta antes de reiniciar animación
            void target.offsetWidth;
            target.classList.add("animate-typing");
          }
        });
      },
      {
        threshold: 0.5,
      }
    );

    observer.observe(target);
  });
</script>
