<style>
  @import url("https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&display=swap");
  @import url("https://fonts.googleapis.com/css2?family=Roboto:wght@400;500&display=swap");

  .test-drive-container {
    display: grid;
    place-items: center;
    grid-template-columns: 1fr;
    gap: 50px;
    background: linear-gradient(to bottom, #0b395e 30%, #0d0d0d 70%);
    padding: 20px;
    text-align: center;
    scroll-margin-top: 100px;
    cursor: pointer;
  }

  .central-content {
    grid-row: 1;
  }

  .test-drive-container h1 {
    font-family: "Georgia", serif;
    font-size: 60px;
    font-weight: bolder;
    color: #e2b009;
    text-transform: uppercase;
    padding: 10px 30px;
    opacity: 0; /* oculto al inicio */
    transition:
      opacity 1.2s ease,
      transform 1.2s ease;
    transform: translateY(20px); /* desplazado hacia abajo */
  }

  .test-drive-container h1.animate-appear {
    opacity: 1;
    transform: translateY(0);
  }

  .central-content .texto-principal {
    font-size: 28px;
    color: white;
    margin-bottom: 20px;
    font-family: "Georgia", serif;
  }

  .test-drive-container p {
    font-size: 20px;
    color: black;
    margin-bottom: 20px;
    font-family: "Georgia", serif;
    text-transform: none;
    font-weight: 600;
  }

  .video-grande {
    width: 100%;
    max-width: 1200px;
    height: 800px;
    margin: 0 auto;
  }

  .videos-container {
    display: flex;
    justify-content: space-between;
    max-width: 100%;
    flex-wrap: wrap;
  }

  .videos-container .video-element {
    height: 500px;
    max-height: 100%;
  }

  .video {
    position: relative;
    background-color: #0b395e;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);
    transition: transform 0.6s ease;
    flex: 1;
    margin: 10px;
    max-width: 100%;
  }

  .video:hover {
    transform: translateY(-10px);
  }

  .video-element {
    width: 100%;
    height: 600px;
    object-fit: cover;
    border-radius: 5px;
    background-color: #b3d9fc;
  }

  .video-texto {
    color: #305151;
    padding: 20px;
    text-align: center;
    margin-top: 10px;
    font-family: "Oswald", Arial, sans-serif;
    letter-spacing: 1px;
  }

  .video-texto h2 {
    font-size: 46px;
    margin-bottom: 10px;
    color: #e2b009;
    font-weight: 600;
    font-family: "Georgia", serif;
    text-transform: uppercase;
  }

  /* texto video grande */
  .video-texto p {
    font-size: 25px;
    color: #ffffff;
    font-weight: 400;
  }

  .titulo-videos {
    display: flex;
    align-items: center;
    font-family: "Roboto", Arial, sans-serif;
    font-size: 22px;
    font-weight: 600;
    color: #e7df0a; /* azul elegante */
    margin-bottom: 12px;
    gap: 8px; /* separación entre icono y texto */
    text-transform: uppercase;
  }

  .titulo-videos i {
    font-size: 22px;
    color: #e7df0a; /* azul moderno */
  }

  .titulo-videos hr {
    flex: 1;
    border: none;
    border-top: 2px solid #e0e0e0;
    margin-left: 12px;
  }

  /* Solo para los videos pequeños horizontales */
  .video-horizontal {
    display: flex;
    align-items: center;
    background: #e9ecef;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.7);
    margin: 18px 0;
    padding: 0;
    min-height: 160px;
    max-height: 250px;
    height: 200px;
  }

  .video-horizontal .video-element {
    width: 300px;
    height: 200px;
    object-fit: cover;
    border-radius: 10px 0 0 10px;
    flex-shrink: 0;
  }

  .video-horizontal .video-texto {
    padding: 12px 18px;
    color: #fff;
    text-align: left;

    letter-spacing: 1px;
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: none;
    font-family: "Georgia", serif;
  }

  .video-horizontal .video-texto h2 {
    font-size: 18px;
    margin-bottom: 6px;
    color: #033232;
  }

  .video-horizontal .video-texto p {
    color: #fff;
    margin: 0;
    font-weight: 400;
  }

  /* Fondo más suave para videos pequeños */
  .video-horizontal {
    background: #151515; /* Gris claro y moderno */
    box-shadow: 0 2px 6px rgba(176, 175, 175, 0.18);
  }

  /* Fuente moderna y menos gruesa */
  .video-horizontal .video-texto,
  .video-horizontal .video-texto h2 {
    font-family: "Georgia", serif;
    font-weight: 600;
  }

  /* Títulos y textos más equilibrados */
  .video-horizontal .video-texto h2 {
    font-size: 24px;
    margin-bottom: 4px;
    font-weight: bold;
    font-family: "Georgia", serif;

    /* Gradiente aplicado al texto */
    background: linear-gradient(
      90deg,
      #e2b009,
      #fac003
    ); /* Amarillo fuerte a azul */
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text; /* Para navegadores que soporten */
    color: transparent; /* Fallback */
  }

  .video-horizontal .video-texto p {
    font-size: 20px;
    color: #e8e7e7;
    margin: 0;
  }

  /* Ajusta el contenedor de columnas para que no tenga fondo ni padding extra */
  .columna-videos {
    background: none;
    padding: 0;
    gap: 18px;
  }

  .ver-mas-container {
    text-align: center;
    margin-top: 20px;
    margin: 40px 0 40px 0;
  }

  .ver-mas {
    padding: 12px 30px;
    font-size: 24px;
    color: white;
    background-color: #0b395e;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
  }

  .ver-mas:hover {
    background-color: #0a2239;
    color: #e6bc00;
  }

  .videos-dos-columnas {
    display: flex;
    justify-content: center;
    gap: 40px;
    width: 100%;
    margin: 0 auto;
    max-width: 1800px;
  }

  .columna-videos {
    flex: 1 1 50%;
    display: flex;
    flex-direction: column;
    gap: 30px;
    padding: 0 10px;
  }

  .columna-videos .video-element {
    height: 600px;
    object-fit: cover;
  }

  /* --- SOLO PARA MOVIL --- */
  @media (max-width: 900px) {
    .video-horizontal {
      flex-direction: row; /* video izquierda, texto derecha */
      align-items: center;
      height: auto; /* deja que crezca según contenido */
      min-height: 120px; /* asegura altura mínima */
    }

    .video-horizontal .video-element {
      width: 120px; /* cuadrado en móvil */
      height: 120px;
      flex-shrink: 0; /* evita que se deforme */
      object-fit: cover;
      border-radius: 10px;
    }

    .video-horizontal .video-texto {
      flex: 1;
      padding: 0 10px;
      text-align: left;
    }

    .video-horizontal .video-texto h2 {
      font-size: 16px;
      margin-bottom: 4px;
    }

    .video-horizontal .video-texto p {
      font-size: 14px;
      line-height: 1.4;
    }
  }

  @media (max-width: 900px) {
    .videos-dos-columnas {
      flex-direction: column;
      gap: 0;
    }
    .columna-videos {
      width: 100%;
      gap: 20px;
    }
    .columna-videos .video-element {
      height: 220px;
      background: #00e6e6;
    }
  }

  /* Estilos responsivos */
  @media (max-width: 768px) {
    .videos-container {
      flex-direction: column;
    }

    .videos-container .video-element {
      height: 400px;
    }

    .test-drive-container {
      padding: 10px;
      gap: 0;
    }

    .test-drive-container h1 {
      font-size: 26px;
    }

    .central-content .texto-principal {
      font-size: 20px;
    }

    .video {
      margin: 10px 0;
    }

    .video-grande {
      height: 90%;
    }

    .video-texto h2 {
      font-size: 24px;
    }

    .video-texto p {
      font-size: 16px;
    }
    .video-element {
      height: auto;
    }

    .ver-mas {
      padding: 12px 24px; /* Un poco más de área táctil */
      font-size: 1.1rem;
    }

    .ver-mas-container {
      margin-bottom: 0; /* Más aire en móviles */
      padding: 10px;
    }
  }
</style>

<script>
  window.addEventListener("DOMContentLoaded", () => {
    const target = document.querySelector("#test-drive h1");
    if (!(target instanceof HTMLElement)) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            target.classList.add("animate-appear");
          } else {
            target.classList.remove("animate-appear");
          }
        });
      },
      { threshold: 0.5 }
    );

    observer.observe(target);
  });
</script>
