<style>
  @import url("https://fonts.googleapis.com/css2?family=Lora:wght@400;700&family=Merriweather:wght@400;700&display=swap");

  body {
    font-family: "Lora", serif; /* Fuente para el texto principal */
  }

  h1 {
    max-width: 100%;
    text-align: center;
    font-weight: bold;
    font-size: 60px;
    color: black; /* Color del texto */
    letter-spacing: 2.6px;

    text-transform: uppercase;
    opacity: 0; /* Comienza transparente */
    transform: translateY(20px); /* Comienza un poco más abajo */
    animation: fadeIn 6s forwards; /* Aplica la animación */
    font-family: "Georgia", serif;
    position: relative; /* Necesario para los pseudoelementos */
  }

  p {
    max-width: 100%;
    text-align: center;
    font-weight: bold;
    font-size: 18px;
    color: black; /* Color del texto */
    margin-bottom: 15px;
    padding: 10px;
    letter-spacing: 2.2px;

    text-transform: uppercase;
    opacity: 0; /* Comienza transparente */
    transform: translateY(20px); /* Comienza un poco más abajo */
    animation: fadeIn 6s forwards; /* Aplica la animación */
    font-family: "Georgia", serif;
    position: relative; /* Necesario para los pseudoelementos */
  }

  @keyframes fadeIn {
    to {
      opacity: 1; /* Aparece gradualmente */
      transform: translateY(0); /* Se mueve a su posición original */
    }
  }

  /* Contenedor del carrusel */
  #carousel {
    align-items: center;
    display: flex;
    overflow: hidden;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    position: relative;
    border-bottom: 6px solid black;
  }

  /* Elementos del carrusel */
  .carousel-item {
    flex: 0 0 auto; /* Cada item ocupa el 100% del ancho del contenedor */
    scroll-snap-align: center;
    position: relative;
    margin: 10px 10px;
    max-width: 100%;
    background: rgba(0, 0, 0, 0.7); /* Fondo negro con 70% de opacidad */
    opacity: 1; /* Ocultar inicialmente */
    transition: opacity 12s ease-in-out; /* Transición suave */
  }

  /* Mostrar el elemento actual */
  .carousel-item.active {
    opacity: 1; /* Mostrar el elemento activo */
  }

  /* Imagen del carrusel */
  .carousel-item img {
    width: 100%; /* Asegurarse de que ocupe todo el ancho */
    height: 580px; /* Mantener la proporción de la imagen */
    object-fit: cover; /* Llenar el contenedor manteniendo el aspecto, pero sin deformar */
    display: block; /* Asegura que no haya espacios en blanco debajo de la imagen */
    transition: transform 2.9s ease; /* Suavidad en la transición */
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.9);
    background: rgba(0, 0, 0, 0.8);
  }

  /* Efecto de desplazamiento hacia arriba al pasar el cursor */
  .carousel-item:hover img {
    transform: scale(1.1) translateY(-10px); /* Desplazamiento hacia arriba al hacer hover para la imagen */
  }

  /* Estilos adicionales para la sección */
  .section-info {
    padding: 20px;
    background: linear-gradient(#b98f04 30%, #000 70%);
  }

  /* Estilos para el contenedor sticky */
  .sticky-container {
    position: relative;
  }

  .sticky-titulo {
    position: relative;
    top: 0;
    z-index: 100;
  }

  .carousel-caption {
    position: relative;
    bottom: 0;
    width: 100%;
    text-align: center;
    font-weight: bolder;
    font-size: 36px;
    color: rgb(228, 227, 227);
    padding: 30px;
    transform: translateY(10px); /* Ajuste de la posición */
    transition: transform 0.4s ease;
    text-transform: uppercase;
  }

  /* Efecto de aparición del texto */
  .carousel-item:hover .carousel-caption {
    transform: translateY(8);
  }

  /* Botón "Ver Más" ajustado */
  .carousel-item a {
    display: flex; /* Ajusta el ancho al contenido */
    position: absolute; /* Mantiene el flujo del documento */
    text-align: center;
    margin: 25px auto; /* Márgenes superior e inferior con auto para centrar */
    background-color: #19354b;
    color: white;
    font-size: 20px;
    border-radius: 10px;
    text-decoration: none;
    transition: transform 0.3s ease;
    bottom: -25px;
    width: auto; /* Ajusta el ancho automáticamente */
    max-width: fit-content; /* Ajusta el ancho al contenido */
    box-sizing: border-box; /* Incluye el padding en el cálculo del ancho */
  }

  .carousel-item a:hover {
    transform: scale(1.07);
    background-color: rgb(154, 117, 8);
    color: white;
    transition: background-color 0.6s ease;
  }

  /* Botones de navegación */
  .carousel-control-prev,
  .carousel-control-next {
    position: absolute;
    top: 50%; /* Centrado verticalmente */
    transform: translateY(-50%); /* Ajuste para mantener centrado */

    color: whitesmoke;
    border: none;
    font-size: 55px;

    cursor: pointer;
    z-index: 10;
    transition: background-color 0.3s ease;
    border-radius: 100%;
  }

  .carousel-control-prev {
    left: 10px; /* Más cerca del borde izquierdo */
  }

  .carousel-control-next {
    right: 10px; /* Más cerca del borde derecho */
  }

  .carousel-control-prev:hover,
  .carousel-control-next:hover {
    border-radius: 100%;
    color: black;
  }

  @media (max-width: 768px) {
    /* Ajustes para pantallas pequeñas */

    h1 {
      font-size: 32px;
    }
    .carousel-caption {
      font-size: 36px;
      padding: 8px;
    }

    .carousel-item a {
      padding: 6px 20px;
      font-size: 16px;
    }

    .carousel-control-prev {
      left: 10px;
    }

    .carousel-control-next {
      right: 10px;
    }

    .carousel-control-prev,
    .carousel-control-next {
      /* top: 110%; Centrado vertical */
    }
  }

  @media (max-width: 480px) {
    /* Ajustes para dispositivos móviles */
    .carousel-caption {
      font-size: 22px;
      padding: 8px;
      color: black;
    }

    .section-info,
    .carousel-item {
      background: white;
    }

    .carousel-item a {
      padding: 8px 20px;
      font-size: 16px;
    }

    .carousel-item img {
      height: 300px; /* Mantiene la relación de aspecto */
    }

    .carousel-control-prev,
    .carousel-control-next {
      top: 55%; /* Centrado vertical */
      font-size: 30px;
    }

    h2 {
      font-size: 30px;
      color: black;
    }

    p {
      font-size: 15px;
    }

    .ford,
    .mazda,
    .bmw,
    .audi,
    .byd {
      font-size: 20px;
    }
  }
</style>

<script>
  // Variables iniciales
  const carousel = document.getElementById("carousel");
  const prevBtn = document.getElementById("prevBtn");
  const nextBtn = document.getElementById("nextBtn");
  const items = Array.from(carousel.children);
  let isPaused = false;
  let currentIndex = 0;

  // Clonar los primeros y últimos elementos para un efecto infinito
  carousel.appendChild(items[0].cloneNode(true));
  carousel.insertBefore(items[items.length - 1].cloneNode(true), items[0]);

  // Función de auto deslizamiento
  function autoSlide() {
    if (!isPaused) {
      currentIndex++;
      if (currentIndex >= items.length + 1) {
        currentIndex = 1;
        carousel.scrollTo({ left: 0, behavior: "auto" });
      }
      carousel.scrollBy({ left: carousel.clientWidth, behavior: "smooth" });
    }
  }

  // Intervalo automático para deslizar el carrusel
  let slideInterval = setInterval(autoSlide, 3000);

  // Pausar auto deslizamiento al pasar el mouse sobre el carrusel
  carousel.addEventListener("mouseover", () => {
    isPaused = true;
    clearInterval(slideInterval);
  });

  // Reanudar auto deslizamiento al salir el mouse del carrusel
  carousel.addEventListener("mouseout", () => {
    isPaused = false;
    slideInterval = setInterval(autoSlide, 6000);
  });

  // Botón de navegación "anterior"
  prevBtn.addEventListener("click", () => {
    isPaused = true;
    currentIndex--;
    if (currentIndex < 0) {
      // Corrección aquí
      currentIndex = items.length - 1;
      carousel.scrollTo({ left: carousel.scrollWidth, behavior: "auto" });
    }
    carousel.scrollBy({ left: -carousel.clientWidth, behavior: "smooth" });
    isPaused = false;
    clearInterval(slideInterval);
    slideInterval = setInterval(autoSlide, 3000);
  });

  // Botón de navegación "siguiente"
  nextBtn.addEventListener("click", () => {
    isPaused = true;
    currentIndex++;
    if (currentIndex >= items.length + 1) {
      currentIndex = 1;
      carousel.scrollTo({ left: 0, behavior: "auto" });
    }
    carousel.scrollBy({ left: carousel.clientWidth, behavior: "smooth" });
    isPaused = false;
    clearInterval(slideInterval);
    slideInterval = setInterval(autoSlide, 3000);
  });
</script>
