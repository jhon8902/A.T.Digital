<style>
  * {
    box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    width: 100%;
    min-height: 100vh;
    margin: 0;
    padding: 0;
    overflow-x: hidden; /* Evita desbordamientos laterales */
  }

  .hibridos-container {
    width: 100%;
    padding: 10px;
    background: linear-gradient(black 30%, #000 70%);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .central-content {
    text-align: center;
    padding: 20px;
    width: 100%;
  }

  .icono-central {
    font-size: clamp(3rem, 6vw, 4rem);
    color: #0af2d7;
    display: block;
    margin-bottom: 10px;
    padding-top: 20px;
  }

  .central-content h1 {
    font-size: 48px;
    color: white;
    text-transform: uppercase;
    font-weight: bold;
    letter-spacing: 4px;
    margin: 0;
    padding: 20px;
    font-family: "Georgia", serif;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-title {
    animation: fadeInUp 1s ease-out;
  }

  .central-content h1 {
    opacity: 0; /* Inicialmente oculto */
    transition: opacity 0.3s;
  }

  .imagenes-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    max-width: 100%;
    width: 100%;
    padding: 10px 20px;
    margin: auto;
  }

  @media (min-width: 768px) {
    .imagenes-container {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .imagenes-container {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .hibrido {
    background-color: #f9f9f9;
    color: black;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;

    width: 100%;
  }

  .hibrido:hover {
