<style>
  .anunciantes-container {
    height: 400px; /* Ajusta según sea necesario */
    margin: auto;
    position: relative;
    max-width: 100%;
    display: grid;
    place-items: center;
    background: black;
    border-bottom: 20px solid black;
  }

  .titulo-slider {
    position: absolute;
    top: 30px; /* Ajusta según la altura deseada */
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    color: rgb(235, 182, 23);
    text-transform: uppercase;
  }

  .titulo-slider h1 {
    font-size: 48px;
    font-weight: bolder;
    margin-bottom: 30px; /* Añade espacio entre el título y el carrusel */
    font-family: "Georgia", serif;
  }

  .anunciantes-carrusel {
    display: flex;
    width: calc(250px * 18);
    animation: scroll 60s linear infinite;
    cursor: pointer;
    margin-top: 100px; /* Ajusta este valor según el espacio que desees */
    background: whitesmoke;
  }

  .anunciantes-carrusel:hover {
    animation-play-state: paused;
  }

  /* Animation imagenes carrusel */
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-250px * 9));
    }
  }

  .anunciante {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 22px;
    gap: 10px; /* Espacio entre la imagen y el texto */
    color: black;
  }

  .anunciante img {
    transition: transform 0.9s ease-in-out; /* Suaviza la animación */
    width: 100px;
    height: 100px;
    border-radius: 10px;
    padding-top: 15px;
  }

  .anunciante img:hover {
    transform: scale(1.1);
  }

  .anunciante-p {
    margin-top: 60px; /* Espacio entre la imagen y el texto */
    text-align: center;
    font-size: 36px;
    font-weight: 600;
    padding: 10px;
  }

  .anunciantes-carrusel::before,
  .anunciantes-carrusel::after {
    content: "";
    position: absolute;
    width: 15%;
    height: 100%;
    z-index: 2;
    /* background: linear-gradient(
      to right,
      rgba(244, 244, 244, 1) 0%,
      rgba(244, 244, 244, 0) 100%
    );*/
  }

  .anunciantes-carrusel::before {
    left: 0;
    top: 0;
  }

  .anunciantes-carrusel::after {
    right: 0;
    top: 0;
    transform: rotatez(180deg);
  }

  /* Animación infinita */
  @keyframes carrusel {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(
        calc(-150px * 6 - 20px * 6)
      ); /* Ancho del carrusel animado */
    }
  }

  /* Responsive Styles */
  @media (max-width: 768px) {
    .anunciantes-container {
      border-bottom: none;
      height: auto; /* Ajusta la altura según el contenido */
      padding-top: 70px; /* Espacio entre el título y el carrusel */
    }

    .anunciante {
      height: auto;
    }

    .anunciantes-carrusel {
      margin-top: 60px; /* Ajusta este valor según el espacio que necesites */
    }

    .anunciante p {
      font-size: 14px;
      font-weight: 500;
      text-align: center;
      color: black;
      padding: 5px;
    }

    .titulo-slider {
      top: 10px; /* Ajusta la posición del título */
    }

    .titulo-slider h1 {
      font-size: 26px;
      width: 100%; /* Ocupa el 100% del ancho */
      text-align: center; /* Centra el texto */
      margin: 0; /* Elimina los márgenes */
      padding: 0; /* Elimina el espacio interior */
      color: rgb(235, 182, 23);
      padding-top: 0;
      margin-bottom: 10px; /* Añade espacio entre el título y el carrusel */
    }

    .anunciante img {
      width: 80px;
      height: 80px;
      border-radius: none;

      margin: 0; /* Elimina el margen */
    }
  }
</style>
