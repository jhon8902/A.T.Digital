<style>
  html {
    scroll-behavior: smooth;
  }

  html,
  body {
    background: linear-gradient(to bottom, #0b0b0b 70%, #fff 30%) !important;
    color-scheme: dark;
  }

  section {
    scroll-margin-top: 100px;
  }
  /* Contenedor principal */

  .noticias-container {
    box-sizing: border-box;
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 10px;
    padding: 40px 10px;
    position: relative;
    background: white;

    font-family: "Georgia", serif;
  }

  .noticias-titulo {
    font-size: 60px;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: bolder;
    font-family: "Georgia", serif;
    padding-top: 20px;
    opacity: 0;
    transform: scale(0.7) translateY(-40px);

    /* Gradiente en el texto */
    background: linear-gradient(90deg, white 10%, white 90%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }

  .descripcion-lanzamientos {
    font-size: 1.8rem;
    text-align: center;
    color: black;
    padding: 20px; /* Top reducido, laterales igual, bottom cero */
    font-family: "Georgia", serif;
    margin-top: -10px; /* (Opcional) más pegado aún si lo ves necesario */
    background: white;
    font-weight: 600;
    text-transform: uppercase;
  }

  .noticias-icono {
    text-align: center;
    margin-top: 0;
    padding-top: 20px;
    padding: 40px;

    background: linear-gradient(90deg, #05223b 10%, #063d67 90%);
  }

  .noticias-icono i {
    color: #f1bf0b;
    font-size: 58px;
    animation: girar 2s linear infinite;
  }

  @keyframes girar {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .noticia-container {
    border-radius: 5px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
  }

  .noticia-imagen-wrapper {
    position: relative;
    overflow: hidden;
  }

  .noticia-container .noticia-imagen-wrapper::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      rgba(207, 1, 1, 0) 0%,
      rgba(255, 255, 255, 0.5) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    z-index: 2;
    pointer-events: none;
  }

  .noticia-imagen-wrapper:hover::before {
    animation: light-pass 1.5s ease;
  }

  @keyframes light-pass {
    from {
      left: -100%;
    }
    to {
      left: 100%;
    }
  }

  .noticia-imagen,
  .noticia-avenger-imagen {
    width: 100%;
    height: 260px;
    object-fit: cover;
    display: block;
  }

  .noticia-texto {
    padding: 15px;
    background: white;
    color: black;
  }

  .noticia-texto-titulo {
    background: black;

    font-size: 22px;
    margin-bottom: 12px;
    color: black;
    font-weight: 600;
    background: transparent;
    padding: 5px 0;
    text-align: start;
    text-transform: uppercase;
    border-bottom: 3px solid #f6c207;
  }

  .noticia-descripcion {
    font-size: 20px;
    color: #191918;
    line-height: 1.6;

    text-transform: none;
    font-weight: 600;
  }

  .noticia-fecha {
    display: block;
    font-size: 0.95em;
    color: #183b55;
    margin-top: 8px;
    font-weight: 600;
    letter-spacing: 0.5px;
  }

  /* --- Jeep Avenger noticia especial --- */
  .noticia-avenger-container {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: row;
    align-items: stretch;
    margin-bottom: 30px;
    background: #181818;
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 4px 24px rgba(0, 0, 0, 0.15);
    width: 100%;
    max-width: 100%;
    min-height: 350px;
  }
  .noticia-avenger-texto {
    padding: 40px 30px 20px 30px;

    background: white;
    color: black;

    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
  }
  .noticia-avenger-texto .noticia-texto-titulo {
    color: black;
    font-size: 26px;
    font-weight: 600;
    background: transparent;
    display: inline-block;
    border-bottom: 4px solid #dbad06;
    padding-bottom: 5px;
    margin-bottom: 15px;
    margin-left: auto;
    margin-right: auto;
  }

  .noticia-avenger-texto .noticia-descripcion {
    color: rgb(27, 26, 26);
    font-size: 24px;

    background: transparent;

    font-weight: 600;
  }

  .noticia-avenger-imagen {
    width: 100%;
    height: 520px;
    min-height: unset;
    object-fit: cover;
    display: block;
    border-radius: 0 10px 10px 0;
  }

  .noticia-avenger-link {
    display: block;
    background: rgb(209, 208, 208);
    color: black;
    padding: 8px 18px;
    border-radius: 6px;
    font-weight: bold;
    text-decoration: none;
    margin: 30px auto 0 auto;
    font-size: 20px;
    text-align: center;
    border: none;
    width: fit-content;
    transition:
      background 0.2s,
      color 0.2s;
    grid-column: 1 / -1; /* Hace que el botón ocupe todo el ancho del grid */
    justify-self: center; /* Centra el botón horizontalmente */
  }
  .noticia-avenger-link:hover {
    background: #e9c02d;
    color: black;
  }

  .noticia-avenger-texto,
  .noticia-avenger-imagen {
    flex: 1 1 50%;
    max-width: 50%;
  }

  /* Animación del título */
  @keyframes fadeInTitle {
    from {
      opacity: 0;
      transform: translateY(-40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes zoomInFade {
    from {
      opacity: 0;
      transform: scale(0.7) translateY(-40px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }

  .noticias-titulo {
    opacity: 0;
    transform: scale(0.7) translateY(-40px);
    transition: none;
  }

  .noticias-titulo.visible {
    animation: zoomInFade 0.9s cubic-bezier(0.4, 0, 0.2, 1) forwards;
  }

  /* Botón Ver más noticias */
  .ver-mas-noticias-container {
    grid-column: 1 / -1; /* Hace que ocupe todo el ancho del grid */
    display: flex;
    justify-content: center;
    margin: 50px 0 30px 0;
  }

  .ver-mas-noticias-btn {
    background: #063d67;
    color: white;
    font-size: 22px;

    font-weight: 600;
    border: none;
    border-radius: 8px;
    padding: 16px 38px;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    transition: background 0.2s;
  }

  .ver-mas-noticias-btn:hover {
    background: #07528b;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .noticias-container {
      grid-template-columns: 1fr 1fr;
    }
  }
  @media (max-width: 900px) {
    .noticias-container {
      grid-template-columns: 1fr;
      padding: 10px;
    }
    .noticia-avenger-container {
      flex-direction: column-reverse;
      min-height: unset;
      border-radius: 0;
    }
    .noticia-avenger-texto,
    .noticia-avenger-imagen {
      max-width: 100%;
      flex: 1 1 100%;
    }

    .noticia-avenger-texto {
      padding: 20px 10px 10px 10px;
      text-align: start;
    }
  }

  @media (max-width: 900px) {
    .noticia-avenger-imagen {
      height: 480px;
      width: 100%;
      object-fit: cover;
    }
  }

  @media (max-width: 600px) {
    .noticias-titulo {
      font-size: 30px;
      padding: 10px 0;
      letter-spacing: 3px;
    }
    /* Elimina o comenta esta regla global */
    /* .noticia-texto-titulo {
      font-size: 28px;
      text-align: start;
    } */

    .descripcion-lanzamientos {
      font-size: 18px;
      padding: 10px;
      margin-top: 0; /* Ajusta el margen superior */
      text-align: center;
      background: white;
      color: black;
      text-transform: none;
    }

    .noticias-icono {
      background-color: white;
      padding: 20px;
    }

    .noticias-icono i {
      font-size: 42px;
      padding-top: 15px;
      color: #f1bf0b;
    }

    .noticia-imagen {
      width: 100%;
      height: 220px;
      object-fit: cover;
    }

    .noticia-avenger-texto {
      text-align: start;
    }
    .noticia-avenger-texto .noticia-texto-titulo {
      font-size: 1.2rem;
      text-align: center;
      margin-left: 0;
      margin-right: 0;
      display: block;
    }

    .noticia-avenger-texto .noticia-descripcion {
      color: black;
      font-size: 18px;

      background: transparent;
    }

    .noticia-fecha {
      font-size: 0.6rem;
    }

    .noticia-texto-titulo {
      font-size: 1.2rem;
      text-align: center;
      font-weight: 600;
      border-bottom: 3px solid #f8ca26;
    }

    .noticia-descripcion {
      font-size: 18px;
    }

    .ver-mas-noticias-btn {
      font-size: 18px;
      padding: 12px 24px;
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const titulo = document.querySelector(".noticias-titulo");
    if (!titulo) return;

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            titulo.classList.add("visible");
          } else {
            titulo.classList.remove("visible");
          }
        });
      },
      { threshold: 0.1 }
    );

    observer.observe(titulo);
  });
</script>
