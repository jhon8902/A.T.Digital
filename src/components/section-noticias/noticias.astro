</style>

<script>
  document.addEventListener("DOMContentLoaded", async function () {
    const titulo = document.querySelector(".noticias-titulo");
    if (!titulo) return;

    // Animaci√≥n con IntersectionObserver (ya la ten√≠as)
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            titulo.classList.add("visible");
          } else {
            titulo.classList.remove("visible");
          }
        });
      },
      { threshold: 0.1 }
    );
    observer.observe(titulo);

    // üöÄ Nuevo: cargar noticias din√°micamente
    try {
      const res = await fetch("/.netlify/functions/get-notes");
      const notas = await res.json();

      // Filtrar solo las de categor√≠a "lanzamientos"
      const lanzamientos = notas.filter(
        (n) => n.category?.toLowerCase() === "lanzamientos"
      );

      const contenedor = document.getElementById("lista-noticias")!;
      contenedor.innerHTML = "";

      lanzamientos.forEach((nota, index) => {
        // La primera noticia ser√° la "destacada"
        if (index === 0) {
          contenedor.innerHTML += `
            <a href="#" class="noticia-avenger-container">
              <div class="noticia-avenger-texto">
                <h3 class="noticia-texto-titulo">${nota.title}</h3>
                <p class="noticia-descripcion">${nota.subtitle || ""}</p>
                <span class="noticia-fecha">Publicado: ${
                  nota.created_at.split("T")[0]
                }</span>
              </div>
              <img src="${
                nota.image1 || "/img/placeholder.jpg"
              }" alt="${nota.title}" class="noticia-avenger-imagen"/>
            </a>
          `;
        } else {
          // El resto normales
          contenedor.innerHTML += `
            <a href="#" class="noticia-container">
              <div class="noticia-imagen-wrapper">
                <img src="${
                  nota.image1 || "/img/placeholder.jpg"
                }" alt="${nota.title}" class="noticia-imagen"/>
              </div>
              <div class="noticia-texto">
                <h3 class="noticia-texto-titulo">${nota.title}</h3>
                <p class="noticia-descripcion">${nota.subtitle || ""}</p>
                <span class="noticia-fecha">Publicado: ${
                  nota.created_at.split("T")[0]
                }</span>
              </div>
            </a>
          `;
        }
      });
    } catch (err) {
      console.error("Error cargando lanzamientos:", err);
    }
  });
</script>
