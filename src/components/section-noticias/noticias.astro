---
import noticias from "../../data/noticias.json";
---

<h1 class="noticias-titulo">Lanzamiento Automotriz</h1>
<div class="-noticias-subtitulo-container">
  <h2 class="noticias-subtitulo">
    los mas recientes lanzamientos en colombia.
  </h2>
</div>

<section class="noticias-container">
  {
    noticias.map((noticia) => (
      <div class="noticia-container">
        <a href={noticia.link} class="noticia">
          <img
            src={noticia.imagen}
            alt={noticia.titulo}
            class="noticia-imagen"
          />
        </a>
        <div class="noticia-texto">
          <h3 class="noticia-texto-titulo">{noticia.titulo}</h3>
          <p class="noticia-descripcion">{noticia.descripcion}</p>
        </div>
      </div>
    ))
  }
</section>

<style>
  html {
    scroll-behavior: smooth;
  }

  /* Contenedor Principal */
  .noticias-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    padding: 50px;
    border-bottom: 20px solid black;
    position: relative;
    background: linear-gradient(white 70%, #000 70%);
  }

  /* Título */
  .noticias-titulo {
    font-size: 55px;
    color: black;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;

    /* text-shadow: 2px 2px 8px rgb(213, 213, 212); */
    padding: 0;
    font-weight: bolder;
    transition: color 0.9s ease; /* Duración y efecto de transición */
    background-color: white;
    padding-top: 30px;
    border-bottom: 2px solid black;
  }

  /* subtitulo */
  .noticias-subtitulo {
    font-size: 22px;
    /*text-shadow: 2px 2px 6px rgba(228, 158, 5, 0.1);*/
    color: black;
    margin-top: 10px;
    text-align: center;
    letter-spacing: 1.1px;

    /* text-shadow: 2px 2px 8px rgb(213, 213, 212); */
    padding: 20px;
    font-weight: 600;
    padding-top: 0;
  }

  /* Tarjeta de Noticias */
  .noticia-container {
    border-radius: 5px;
    overflow: hidden;
    max-width: 1550px;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .noticia-container:hover {
    transform: translateY(20px);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.1);
  }

  /* Imagen */
  .noticia-imagen {
    width: 100%;
    height: 220px;
    object-fit: cover;
    align-items: center;
  }

  /* Texto */
  .noticia-texto {
    padding: 15px;
    text-align: start;
    background: whitesmoke;
    text-transform: uppercase;
  }

  .noticia-texto-titulo {
    font-size: 28px;
    margin-bottom: 12px;
    color: #19354b;
    font-weight: 600;
    text-shadow: 2px 2px 4px white;
  }

  .noticia-descripcion {
    font-size: 18px;
    color: rgb(18, 18, 18);
    line-height: 1.6;
    font-weight: 600;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .noticias-container {
      padding: 0;
    }
    .noticia-imagen {
      height: 180px;
      align-content: center;
    }

    .noticias-titulo {
      font-size: 35px;
    }

    .noticias-subtitulo {
      font-size: 14px;
    }

    .noticia-texto-titulo {
      font-size: 28px;
      text-align: center;
    }

    .noticia-descripcion {
      font-size: 16px;
      text-align: center;
    }
  }
</style>
