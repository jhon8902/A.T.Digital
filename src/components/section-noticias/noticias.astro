---
import noticias from "../../data/noticias.json";
---

<h1 class="noticias-titulo">
  <i class="fa-brands fa-galactic-republic"></i> Lanzamientos
</h1>

<section class="noticias-container">
  {
    noticias.map((noticia) => (
      <div class="noticia-container">
        <a href={noticia.link} class="noticia">
          <img
            src={noticia.imagen}
            alt={noticia.titulo}
            class="noticia-imagen"
          />
        </a>
        <div class="noticia-texto">
          <h3 class="noticia-texto-titulo">{noticia.titulo}</h3>
          <p class="noticia-descripcion">{noticia.descripcion}</p>
        </div>
      </div>
    ))
  }
</section>

<style>
  html {
    scroll-behavior: smooth;
  }

  /* Contenedor Principal */
  .noticias-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    padding: 40px;

    position: relative;
    background-color: rgb(29, 28, 28);
  }

  /* Título */
  .noticias-titulo {
    font-size: 48px;
    color: rgb(0, 0, 0);
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 1px;
    border-bottom: none;
    /* text-shadow: 2px 2px 8px rgb(213, 213, 212); */
    padding: 30px;
    font-weight: bolder;
    transition: color 0.9s ease; /* Duración y efecto de transición */
    background-color: white;
    padding-top: 30px;
    font-family: "Georgia", serif;
  }

  .noticias-titulo i {
    color: black; /* Cambia el color del ícono */
    font-size: 54px; /* Ajusta el tamaño */
    margin-right: 5px; /* Cambia el margen derecho */
    transition: all 0.3s ease; /* Añade una transición para efectos interactivos */
  }

  .noticias-titulo i:hover {
    color: blue; /* Cambia el color al pasar el cursor */
    transform: scale(1.2); /* Escala el tamaño en hover */
  }

  /* Tarjeta de Noticias animacion card completa */
  .noticia-container {
    border-radius: 5px;
    overflow: hidden;
    max-width: 1550px;
  }

  /* Efecto de luz horizontal para las imágenes */
  .noticia-container {
    position: relative;
    overflow: hidden;
  }

  .noticia-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%; /* Comienza fuera de la imagen */
    width: 100%;
    height: 100%;
    background: linear-gradient(
      90deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.5) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    z-index: 2;
    pointer-events: none;
  }

  .noticia-container:hover::before {
    animation: light-pass 2s ease forwards; /* Aplica la animación */
  }

  /* Definición de la animación */
  @keyframes light-pass {
    from {
      left: -100%; /* Comienza fuera de la imagen */
    }
    to {
      left: 100%; /* Termina fuera de la imagen */
    }
  }

  .noticia-imagen {
    width: 100%;
    height: 230px;
    object-fit: cover;
    position: relative;
    z-index: 1; /* Asegura que la imagen esté debajo del efecto */
  }

  /* Texto */
  .noticia-texto {
    padding: 15px;
    text-align: start;
    background: #f5f6f7;
  }

  .noticia-texto-titulo {
    font-family: "Georgia", serif;
    font-size: 24px;
    margin-bottom: 12px;
    color: black;
    font-weight: 600;
    background: #e0e0e1;
    padding: 5px;
    text-align: center;
    text-transform: uppercase;
  }

  .noticia-descripcion {
    font-size: 18px;
    color: rgb(36, 36, 36);
    line-height: 1.6;
    font-weight: 400;
    font-family: "Poppins", sans-serif;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .noticias-container {
      padding: 0;
      background-color: whitesmoke;
    }

    .noticia-imagen {
      height: 250px;
      align-content: center;
      padding: 10px;
      margin: 0;
    }

    .noticias-titulo {
      font-size: 34px;

      padding: 20px;
      text-align: center;
      border-bottom: 20px solid white;
    }

    .noticia-container {
      transition: none;
      max-width: 1560px;
    }

    .noticia-container:hover {
      transform: none;
    }
    .noticia-texto {
      background-color: white;
      text-align: start;
      padding: 10px;
    }
    .noticia-texto-titulo {
      font-size: 22px;
      margin-bottom: 10px;
      text-align: start;
      display: inline-block;
      width: 60%;
      background: none;
      border-bottom: 2px solid #9e9e9e;
      padding: 5px;
    }

    .noticia-descripcion {
      font-size: 17px;
      color: black;
      font-weight: 600;
      padding: 5px;
      text-align: start;
    }
  }
</style>
