<style>
  /* Estilo principal del header */
  .header {
    position: relative;
    height: auto;
    width: 100%;
    background: black;
    font-family: "Georgia", serif;
  }

  .header::after {
    content: "";
    background-image: url("/img/autlogo2.png");
    background-size: 20px; /* Ajusta el tamaño de la imagen a 50px */
    background-repeat: no-repeat; /* Evita que la imagen se repita */
    background-position: center; /* Centra la imagen en el contenedor */
    opacity: 1; /* Hacer la imagen completamente visible */
    position: absolute;
    top: 40px; /* mueve hacia abajo la imagen */
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* icono casita de regreso */
  .fa-solid {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background-color: #e1a307; /* Fondo del icono */
    color: black; /* Color del icono */
    padding: 10px 15px; /* Espaciado interno */
    border-radius: 100%; /* Forma circular */
    text-align: center; /* Centrar el texto */
    font-size: 34px; /* Tamaño del icono */
    z-index: 1000; /* Asegura que esté encima de otros elementos */
    cursor: pointer;
    transition: background-color 0.3s;

    font-weight: 600;
  }

  .fa-solid:hover {
    background-color: #555; /* Cambio de color en hover */
    color: white;
  }

  /* clase para redes sociales contenedor */

  .top-bar {
    display: flex;
    align-items: center;
    padding: 20px;
    gap: 10px;
    position: fixed; /* Fija la barra */
    top: 0; /* Pegada arriba */
    left: 0; /* Pegada al lado izquierdo */
    width: 100%; /* Ocupa todo el ancho */
    z-index: 1000; /* Para que quede por encima del contenido */
    background-color: #000; /* O el color que uses en tu header */
  }

  /* Espaciadores para centrar el menú */
  .top-bar .spacer {
    flex: 1;
  }

  /* Menú de escritorio */
  .menu-escritorio {
    display: none;
    margin-top: 20px;
    text-align: center;
    justify-self: center; /* Centra el menú en la columna del medio */
  }

  /* menu escritorio */
  .menu-escritorio ul {
    display: flex;
    justify-content: center;

    list-style: none;
    padding: 0;
    margin: 0;
  }

  .menu-escritorio ul li {
    margin: 0 10px;
  }

  .menu-escritorio ul li a {
    color: white;
    font-size: 1.1rem;
    padding: 12px 18px;
    border-radius: 8px;
    text-decoration: none;
    border: 1px solid #e1a307 !important;
  }

  .menu-escritorio ul li a:hover {
    background: rgb(220, 220, 220) !important;
    color: #111;
    transform: scale(2.05);
  }

  /* Redes sociales icono */

  .social-icons {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 26px;
  }

  /* Espacio interno y tamaño de los iconos */
  .social-icons a {
    display: inline-block;
    height: 36px;
    width: 36px;
    padding: 5px; /* Ampliamos el espacio interno */
    padding-top: 10px;
    border-radius: 10px; /* Si deseas bordes redondeados */
    text-align: center;
    line-height: 15px; /* Centra el icono verticalmente */
  }

  /* WhatsApp */
  .social-icons a.fa-whatsapp {
    text-decoration: none;
    background-color: #25d366; /* Verde de WhatsApp */
    transition: transform 0.3s ease;
  }
  .social-icons a.fa-whatsapp:hover {
    transform: scale(1.2); /* Efecto de pulso */
  }

  /* Facebook */
  .social-icons a.fa-facebook {
    background-color: #1877f2; /* Azul de Facebook */
    transition: transform 0.3s ease;
  }
  .social-icons a.fa-facebook:hover {
    transform: scale(1.2); /* Efecto de pulso */
  }

  /* Instagram */
  .social-icons a.fa-instagram {
    background: radial-gradient(
      circle at 30% 30%,
      #feda77,
      #f58529,
      #dd2a7b,
      #8134af,
      #515bd4
    ); /* Gradiente de Instagram */
    transition: transform 0.3s ease;
  }
  .social-icons a.fa-instagram:hover {
    transform: scale(1.2); /* Efecto de pulso */
  }

  /* TikTok */
  .social-icons a.fa-tiktok {
    background-color: #343333; /* Negro de TikTok */
    transition: transform 0.3s ease;
    color: white;
  }
  .social-icons a.fa-tiktok:hover {
    transform: scale(1.2); /* Efecto de pulso */
  }
  /* Botón hamburguesa */

  .boton-hamburguesa {
    color: #b98f04;
    font-size: 30px;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    z-index: 3;
    padding: 10px;
  }

  .menu-hamburguesa {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: 10000;
  }

  .menu-hamburguesa.active {
    display: block;
  }

  .menu-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .menu-content {
    position: absolute;
    top: 0;
    left: 0;
    width: 80vw;
    max-width: 320px;
    height: 100vh;
    background: #111;
    box-shadow: 2px 0 20px rgba(0, 0, 0, 0.2);
    z-index: 2;
    padding: 30px 20px 20px 20px;
    display: flex;
    flex-direction: column;
    animation: slideInMenu 0.4s cubic-bezier(0.77, 0, 0.18, 1) forwards;
  }

  /*animacion menu hamburguesa*/
  @keyframes slideInMenu {
    from {
      transform: translateX(-100%);
    }
    to {
      transform: translateX(0);
    }
  }

  /* boton cerrar menu */
  .close-menu {
    background: none;
    border: none;
    color: #e1a307;
    font-size: 2rem;
    align-self: flex-end;
    cursor: pointer;
    margin-bottom: 20px;
  }

  /* menu hamburguesa lista */
  .menu-content ul {
    list-style: none;
    padding: 0;
    margin: 0;
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 28px;
  }

  /* menu hamburguesa enlaces */
  .menu-content ul li a {
    color: white;
    font-size: 1.1rem;
    padding: 12px 18px;
    border-radius: 8px;
    text-decoration: none;

    transition:
      background 0.3s,
      color 0.3s,
      transform 0.2s;
    text-transform: uppercase;
    font-weight: 500;
  }
  .menu-content ul li a:hover {
    background: #bcbcbb;
    color: #111;
    transform: scale(1.05);
  }
  @media (min-width: 768px) {
    .menu-hamburguesa,
    .boton-hamburguesa {
      display: none !important;
    }
  }
  @media (max-width: 767px) {
    .menu-hamburguesa {
      display: none;
    }
    .menu-hamburguesa.active {
      display: block;
    }
    .boton-hamburguesa {
      display: flex;
    }
  }

  /* Media query para pantallas pequeñas */
  @media (max-width: 600px) {
    .header {
      height: 210px; /* Ajusta la altura del header en pantallas pequeñas */
    }

    .header::after {
      background-size: 300px; /* Reduce el tamaño de la imagen en pantallas pequeñas */
    }
  }

  /* Media query para pantallas medianas */
  @media (min-width: 601px) and (max-width: 1024px) {
    .header {
      height: 250px; /* Ajusta la altura del header en pantallas medianas */
    }

    .header::after {
      background-size: 400px; /* Ajusta el tamaño de la imagen para pantallas medianas */
    }
  }

  /* Responsive */
  @media (min-width: 768px) {
    .header {
      height: 350px; /* Ajusta la altura de tu header */
    }

    .header::after {
      background-size: 600px; /* Ajusta el tamaño de la imagen a 600px pantallas grandes */
    }

    .social-icons {
      gap: 10px;
    }

    /* Mostrar el menú de navegación solo en escritorio */
    .top-bar .menu-hamburguesa {
      display: flex;
      padding: 5px;
    }
  }

  @media (max-width: 767px) {
    /* Ocultar el menú de navegación en móvil */
    .top-bar .menu-hamburguesa {
      display: none;
    }

    .social-icons {
      gap: 5px;
      font-size: 22px;
    }

    /* Espacio interno y tamaño de los iconos */
    .social-icons a {
      display: inline-block;
      height: 30px;
      width: 30px;
      padding: 5px; /* Ampliamos el espacio interno */
      padding-top: 7px;
      border-radius: 10px; /* Si deseas bordes redondeados */
      text-align: center;
      line-height: 15px; /* Centra el icono verticalmente */
    }
  }

  /* Botones de búsqueda y registro */
  .auth-buttons {
    display: flex;
    align-items: center; /* Asegura que los botones se alineen verticalmente */
    gap: 10px; /* Ajusta el espacio entre botones */
    font-size: 12px;
  }

  .register-button {
    background-color: black;
    color: white;
    padding: 8px 16px;
    border-radius: 5px;
    cursor: pointer;

    transition: background-color 0.3s;
    border: 1px solid rgb(171, 129, 4); /* Aquí defines el borde amarillo */
  }

  /* Estilos para el botón de búsqueda */
  #search-button {
    background-color: black;
    color: white;
    padding: 8px 16px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 30px;
    transition: background-color 0.6s;
    border: 1px solid rgb(26, 26, 26); /* Aquí defines el borde amarillo */
  }

  #search-button:hover {
    background-color: #555;
    color: white;
  }

  /* Estilo específico para el icono de búsqueda */
  .fa-sistrix {
    font-size: 10px;
  }

  /* Estilos para el input de búsqueda */
  .search-input {
    display: none; /* Inicialmente oculto */
    padding: 8px 16px;
    font-size: 16px;
    border-radius: 5px;
    border: 1px solid rgb(171, 129, 4);
    margin-left: 10px;
    transition: opacity 0.3s ease-in-out;
  }

  /* Estilo opcional para que el campo de búsqueda se vea mejor cuando está visible */
  .search-input.show {
    display: inline-block; /* Aparece cuando se le agrega la clase .show */
    opacity: 1;
  }

  .social-icons a.fa-whatsapp,
  .social-icons a.fa-facebook,
  .social-icons a.fa-instagram,
  .social-icons a.fa-tiktok {
    color: white !important; /* Fuerza el color blanco en los íconos */
  }

  @media (min-width: 768px) {
    .menu-escritorio {
      display: block;
      margin-top: 20px;
      text-align: center;
    }
    .menu-escritorio ul {
      display: flex;
      justify-content: center;
      gap: 30px;
      list-style: none;
      padding: 0;
      margin: 0;
    }
    .menu-escritorio ul li a {
      color: white;
      font-size: 1.1rem;
      padding: 12px 18px;
      border-radius: 8px;
      text-decoration: none;
      border: 2px solid #e1a307;
      transition:
        background 0.3s,
        color 0.3s,
        transform 0.2s;
      text-transform: uppercase;
      font-weight: 500;
    }
    .menu-escritorio ul li a:hover {
      background: #e1a307;
      color: #111;
      transform: scale(1.05);
    }
  }
  @media (max-width: 767px) {
    .menu-escritorio {
      display: none;
    }
  }

  .boton-inicio {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background: linear-gradient(135deg, #e1a307 60%, #b98f04 100%);
    color: #222;
    padding: 12px 16px;
    border-radius: 50%;
    box-shadow: 0 4px 16px rgba(225, 163, 7, 0.18);
    font-size: 32px;
    z-index: 1000;
    cursor: pointer;
    transition:
      background 0.3s,
      color 0.3s,
      transform 0.2s,
      box-shadow 0.3s;
    border: 2px solid #b98f04;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .boton-inicio:hover {
    background: linear-gradient(135deg, #b98f04 60%, #e1a307 100%);
    color: #fff;
    transform: scale(1.12) translateY(-6px);
    box-shadow: 0 8px 24px rgba(225, 163, 7, 0.28);
  }

  #sugerencias {
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    font-family: Arial, sans-serif;
    font-size: 14px;
  }

  #sugerencias div {
    transition: background 0.2s;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    // ---------------------------
    // Menú hamburguesa
    // ---------------------------
    const botonHamburguesa = document.getElementById("boton-hamburguesa");
    const menu = document.getElementById("menu-hamburguesa") as HTMLElement;
    const closeMenu = document.getElementById("close-menu");
    const overlay = document.getElementById("menu-overlay");

    if (botonHamburguesa && menu) {
      botonHamburguesa.addEventListener("click", function () {
        menu.classList.add("active");
        document.body.style.overflow = "hidden";
      });
    }
    if (closeMenu && menu) {
      closeMenu.addEventListener("click", function () {
        menu.classList.remove("active");
        document.body.style.overflow = "";
      });
    }
    if (overlay && menu) {
      overlay.addEventListener("click", function () {
        menu.classList.remove("active");
        document.body.style.overflow = "";
      });
    }
    document.addEventListener("keydown", function (e: KeyboardEvent) {
      if (e.key === "Escape" && menu.classList.contains("active")) {
        menu.classList.remove("active");
        document.body.style.overflow = "";
      }
    });

    // ---------------------------
    // Botón de búsqueda y input
    // ---------------------------
    const searchButton = document.getElementById(
      "search-button"
    ) as HTMLButtonElement;
    const searchInput = document.getElementById(
      "search-input"
    ) as HTMLInputElement;

    if (searchButton && searchInput) {
      searchInput.style.display = "none"; // oculto al inicio

      searchButton.addEventListener("click", function () {
        if (searchInput.style.display === "none") {
          searchInput.style.display = "inline-block";
          searchInput.focus();
        } else {
          searchInput.style.display = "none";
        }
      });
    } else {
      console.error("Los elementos de búsqueda no se encuentran en el DOM.");
    }

    // ---------------------------
    // Botón de registro
    // ---------------------------
    const registerButton = document.querySelector(".register-button");
    if (registerButton) {
      registerButton.addEventListener("click", function () {
        alert("Redirigiendo al registro.");
      });
    }

    // Cerrar menú hamburguesa al hacer clic en un enlace
    const menuLinks = document.querySelectorAll(
      "#menu-hamburguesa .menu-content ul li a"
    );
    menuLinks.forEach(function (link) {
      link.addEventListener("click", function () {
        menu.classList.remove("active");
        document.body.style.overflow = "";
      });
    });

    // ---------------------------
    // Buscador con sugerencias
    // ---------------------------
    const secciones = [
      { nombre: "Inicio", id: "#inicio" },
      { nombre: "Lanzamientos", id: "#lanzamientos" },
      { nombre: "Híbridos", id: "#hibridos" },
      { nombre: "Eléctricos", id: "#electricos" },
      { nombre: "Pruebas", id: "#test-drive" },
    ];

    // Crear contenedor de sugerencias
    const sugerencias = document.createElement("div");
    sugerencias.id = "sugerencias";
    sugerencias.style.position = "absolute";
    sugerencias.style.background = "#fff";
    sugerencias.style.border = "1px solid #ccc";
    sugerencias.style.width = "200px";
    sugerencias.style.maxHeight = "150px";
    sugerencias.style.overflowY = "auto";
    sugerencias.style.display = "none";
    sugerencias.style.zIndex = "10000";
    document.body.appendChild(sugerencias);

    // Posicionar sugerencias debajo del input
    function posicionarSugerencias() {
      const rect = searchInput.getBoundingClientRect();
      sugerencias.style.left = rect.left + "px";
      sugerencias.style.top = rect.bottom + window.scrollY + "px";
      sugerencias.style.width = rect.width + "px";
    }

    // Mostrar sugerencias mientras escribe
    searchInput.addEventListener("input", function () {
      const valor = searchInput.value.toLowerCase().trim();
      sugerencias.innerHTML = "";

      if (!valor) {
        sugerencias.style.display = "none";
        return;
      }

      const resultados = secciones.filter((sec) =>
        sec.nombre.toLowerCase().includes(valor)
      );

      if (resultados.length > 0) {
        resultados.forEach((sec) => {
          const item = document.createElement("div");
          item.textContent = sec.nombre;
          item.style.padding = "8px";
          item.style.cursor = "pointer";

          item.addEventListener("click", () => {
            window.location.href = sec.id;
            sugerencias.style.display = "none";
          });

          item.addEventListener("mouseover", () => {
            item.style.background = "#eee";
          });

          item.addEventListener("mouseout", () => {
            item.style.background = "#fff";
          });

          sugerencias.appendChild(item);
        });
        sugerencias.style.display = "block";
        posicionarSugerencias();
      } else {
        sugerencias.style.display = "none";
      }
    });

    // Buscar con Enter
    searchInput.addEventListener("keydown", function (event: KeyboardEvent) {
      if (event.key === "Enter") {
        const valor = searchInput.value.toLowerCase().trim();
        const resultado = secciones.find((sec) =>
          sec.nombre.toLowerCase().includes(valor)
        );

        if (resultado) {
          window.location.href = resultado.id;
        } else {
          alert("No se encontró ninguna sección.");
        }
        sugerencias.style.display = "none";
      }
    });

    // Ocultar sugerencias al hacer clic fuera
    document.addEventListener("click", function (event: MouseEvent) {
      const target = event.target as Node;
      if (!searchInput.contains(target) && !sugerencias.contains(target)) {
        sugerencias.style.display = "none";
      }
    });
  });
</script>
