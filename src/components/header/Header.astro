</header>

<style>
  /* Estilo principal del header */
  .header {
    position: relative;
    height: auto;
    width: 100%;
    background: black;
    border-bottom: 2px solid rgb(76, 53, 7);
  }

  .header::after {
    content: "";
    background-image: url("/img/autlogo2.png");
    background-size: 50px; /* Ajusta el tama침o de la imagen a 50px */
    background-repeat: no-repeat; /* Evita que la imagen se repita */
    background-position: center; /* Centra la imagen en el contenedor */
    opacity: 1; /* Hacer la imagen completamente visible */
    position: absolute;
    top: 30px; /* mueve hacia abajo la imagen */
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* Media query para pantallas peque침as */
  @media (max-width: 600px) {
    .header {
      height: 220px; /* Ajusta la altura del header en pantallas peque침as */
    }

    .header::after {
      background-size: 300px; /* Reduce el tama침o de la imagen en pantallas peque침as */
    }
  }

  /* Media query para pantallas medianas */
  @media (min-width: 601px) and (max-width: 1024px) {
    .header {
      height: 250px; /* Ajusta la altura del header en pantallas medianas */
    }

    .header::after {
      background-size: 400px; /* Ajusta el tama침o de la imagen para pantallas medianas */
    }
  }

  /* icono casita de regreso */
  .scroll-to-top {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background-color: #e1a307; /* Fondo del icono */
    color: black; /* Color del icono */
    padding: 10px 25px; /* Espaciado interno */
    border-radius: 100%; /* Forma circular */
    text-align: center; /* Centrar el texto */
    font-size: 34px; /* Tama침o del icono */
    z-index: 1000; /* Asegura que est칠 encima de otros elementos */
    cursor: pointer;
    transition: background-color 0.3s;
    border-bottom: 3px solid black;
    font-weight: 600;
  }

  .scroll-to-top:hover {
    background-color: #555; /* Cambio de color en hover */
  }

  /* clase para redes sociales contenedor */

  .top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
    /* border-bottom: 2px solid rgb(238, 157, 8);*/
  }

  /* Redes sociales icono */

  .social-icons {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .social-icons .icon {
    height: 30px;
    width: 30px;
    margin-right: 5px;
  }

  /* linea separador redes de lista nav */

  .separator {
    border-left: 1px solid gray;
    height: 24px;
    margin-left: 10px;
  }

  /* Bot칩n hamburguesa */

  .boton-hamburguesa {
    color: #b98f04;
    font-size: 30px;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    z-index: 3;
  }

  .menu-hamburguesa {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Tres columnas */
    gap: 10px; /* Espaciado entre elementos */
    width: 100%;
    background: black;
    text-align: center;
    position: absolute;
    top: 60px;
    left: 0;
    right: 0;
    z-index: 3;
    transition: all 0.6s ease;
    justify-content: center;
    padding: 20px;
    text-transform: uppercase;
  }

  .menu-hamburguesa ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: contents; /* Para que los elementos hereden el grid */
  }

  .menu-hamburguesa li {
    list-style: none;
    color: white;
    font-size: 20px;
    text-align: center;
    padding: 10px;
  }

  .menu-hamburguesa ul li a {
    color: white;
    font-size: 14px;
    transition: all 0.6s ease;
    padding: 10px;
    box-shadow: 0 0 10px rgba(249, 191, 1, 0.7);
  }

  .menu-hamburguesa ul li a:hover {
    background: #555;
    padding: 10px;
    border-radius: 10px;
    transform: scale(1.05);
    box-shadow: 0 0 10px rgba(246, 190, 4, 0.5);
  }

  /* Responsive */
  @media (min-width: 768px) {
    .header {
      height: 350px; /* Ajusta la altura de tu header */
    }

    .header::after {
      background-size: 600px; /* Ajusta el tama침o de la imagen a 600px */
    }

    .boton-hamburguesa {
      display: none;
    }

    .menu-hamburguesa {
      display: flex;
      justify-content: center;
      position: static;
      background: none;
    }

    .menu-hamburguesa ul {
      display: flex;
    }

    .menu-hamburguesa ul li {
      padding: 5px 25px;
    }

    .menu-hamburguesa ul li a {
      font-size: 16px;
      padding: 8px 20px;
    }

    /* Mostrar el men칰 de navegaci칩n solo en escritorio */
    .top-bar .menu-hamburguesa {
      display: flex;
      padding: 5px;
    }
  }

  @media (max-width: 767px) {
    /* Ocultar el men칰 de navegaci칩n en m칩vil */
    .top-bar .menu-hamburguesa {
      display: none;
    }
  }

  /* Botones de b칰squeda y registro */
  .auth-buttons {
    display: flex;
    align-items: center; /* Asegura que los botones se alineen verticalmente */
    gap: 10px; /* Ajusta el espacio entre botones */
    font-size: 12px;
  }

  .register-button {
    background-color: black;
    color: white;
    padding: 8px 16px;
    border-radius: 5px;
    cursor: pointer;

    transition: background-color 0.3s;
    border: 2px solid rgb(242, 175, 3); /* Aqu칤 defines el borde amarillo */
  }

  .search-button {
    background-color: black;
    color: white;
    padding: 8px 16px;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.6s;
    border: 2px solid rgb(242, 175, 3); /* Aqu칤 defines el borde amarillo */
  }

  .search-button:hover,
  .register-button:hover {
    background-color: #555;
    cursor: pointer;
    color: white;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var botonHamburguesa = document.getElementById("boton-hamburguesa");
    if (botonHamburguesa) {
      botonHamburguesa.addEventListener("click", function () {
        var menu = document.getElementById("menu-hamburguesa");
        var icon = this.querySelector("span");

        if (menu) {
          if (menu.style.display === "none" || menu.style.display === "") {
            menu.style.display = "grid"; // Mant칠n 'grid' en lugar de 'block'
            if (icon) {
              icon.innerHTML = "&#10006;"; // Cambia el 칤cono a "X"
            }
          } else {
            menu.style.display = "none";
            if (icon) {
              icon.innerHTML = "&#9776;"; // Cambia el 칤cono a hamburguesa
            }
          }
        }
      });
    }
  });

  document.addEventListener("DOMContentLoaded", function () {
    var searchButton = document.getElementById("search-button");
    if (searchButton) {
      searchButton.addEventListener("click", function () {
        alert("B칰squeda activada.");
      });
    }

    var registerButton = document.querySelector(".register-button");
    if (registerButton) {
      registerButton.addEventListener("click", function () {
        alert("Redirigiendo al registro.");
      });
    }
  });
</script>
