<header class="header">
  <!-- Sección Superior: Redes Sociales, Búsqueda y Autenticación -->
  <div class="top-bar">
    <!-- Redes Sociales a la Izquierda -->
    <div class="social-icons">
      <a href="https://web.whatsapp.com/" class="fa-brands fa-whatsapp"></a>
      <a href="https://es-la.facebook.com/" class="fa-brands fa-facebook"></a>
      <a
        href="https://www.instagram.com/autotechdigital/"
        class="fa-brands fa-instagram"></a>
      <!--<a href="https://www.tiktok.com/es/" class="fa-brands fa-tiktok"></a>-->
    </div>

    <!-- contenido del menu hamburguesa -->
    <nav id="menu-hamburguesa" class="menu-hamburguesa">
      <ul>
        <li><a href="/#inicio">Inicio</a></li>
        <li><a href="/#hibridos">Hibridos</a></li>
        <li><a href="/#electricos">Electricos</a></li>
        <li><a href="/#test-drive">pruevas</a></li>
        <li><a href="/#revista">Revista</a></li>
        <li><a href="/#deportes">Deportes</a></li>
      </ul>
    </nav>

    <!-- Añade un id a la sección de inicio -->
    <div id="inicio">
      <!-- Contenido de inicio -->
    </div>

    <a href="#inicio" class="fa-solid fa-arrow-up-from-bracket">
      <!-- Emoji de flecha hacia arriba -->
    </a>
    <!-- Botones de Búsqueda y Registro a la Derecha -->
    <div class="auth-buttons">
      <button id="search-button" class="fa-brands fa-sistrix"></button>
      <input
        type="text"
        id="search-input"
        class="search-input"
        placeholder="Buscar..."
      />

      <button class="register-button">Registro</button>
    </div>
    <!-- icono del menu hamburguesa -->
    <button id="boton-hamburguesa" class="boton-hamburguesa">
      <span>&#9776;</span>
    </button>
  </div>
</header>

<style>
  /* Estilo principal del header */
  .header {
    position: relative;
    height: auto;
    width: 100%;
    background: black;
  }

  .header::after {
    content: "";
    background-image: url("/img/autlogo2.png");
    background-size: 20px; /* Ajusta el tamaño de la imagen a 50px */
    background-repeat: no-repeat; /* Evita que la imagen se repita */
    background-position: center; /* Centra la imagen en el contenedor */
    opacity: 1; /* Hacer la imagen completamente visible */
    position: absolute;
    top: 30px; /* mueve hacia abajo la imagen */
    left: 0;
    width: 100%;
    height: 100%;
  }

  /* icono casita de regreso */
  .fa-solid {
    position: fixed;
    bottom: 30px;
    right: 30px;
    background-color: #e1a307; /* Fondo del icono */
    color: black; /* Color del icono */
    padding: 10px 15px; /* Espaciado interno */
    border-radius: 100%; /* Forma circular */
    text-align: center; /* Centrar el texto */
    font-size: 34px; /* Tamaño del icono */
    z-index: 1000; /* Asegura que esté encima de otros elementos */
    cursor: pointer;
    transition: background-color 0.3s;

    font-weight: 600;
  }

  .fa-solid:hover {
    background-color: #555; /* Cambio de color en hover */
    color: white;
  }

  /* clase para redes sociales contenedor */

  .top-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px;
  }

  /* Redes sociales icono */

  .social-icons {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 26px;
  }

  /* Espacio interno y tamaño de los iconos */
  .social-icons a {
    display: inline-block;
    height: 36px;
    width: 36px;
    padding: 5px; /* Ampliamos el espacio interno */
    padding-top: 10px;
    border-radius: 10px; /* Si deseas bordes redondeados */
    text-align: center;
    line-height: 15px; /* Centra el icono verticalmente */
  }

  /* WhatsApp */
  .social-icons a.fa-whatsapp {
    text-decoration: none;
    background-color: #25d366; /* Verde de WhatsApp */
    transition: transform 0.3s ease;
  }
  .social-icons a.fa-whatsapp:hover {
    transform: scale(1.2); /* Efecto de pulso */
  }

  /* Facebook */
  .social-icons a.fa-facebook {
    background-color: #1877f2; /* Azul de Facebook */
    transition: transform 0.3s ease;
  }
  .social-icons a.fa-facebook:hover {
    transform: scale(1.2); /* Efecto de pulso */
  }

  /* Instagram */
  .social-icons a.fa-instagram {
    background: radial-gradient(
      circle at 30% 30%,
      #feda77,
      #f58529,
      #dd2a7b,
      #8134af,
      #515bd4
    ); /* Gradiente de Instagram */
    transition: transform 0.3s ease;
  }
  .social-icons a.fa-instagram:hover {
    transform: scale(1.2); /* Efecto de pulso */
  }

  /* TikTok */
  .social-icons a.fa-tiktok {
    background-color: #343333; /* Negro de TikTok */
    transition: transform 0.3s ease;
    color: white;
  }
  .social-icons a.fa-tiktok:hover {
    transform: scale(1.2); /* Efecto de pulso */
  }
  /* Botón hamburguesa */

  .boton-hamburguesa {
    color: #b98f04;
    font-size: 30px;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    z-index: 3;
  }

  .menu-hamburguesa {
    display: grid;
    grid-template-columns: repeat(3, 1fr); /* Tres columnas */
    gap: 10px; /* Espaciado entre elementos */
    width: 100%;
    background: black;
    text-align: center;
    position: absolute;
    top: 60px;
    left: 0;
    right: 0;
    z-index: 3;
    transition: all 0.6s ease;
    justify-content: center;
    padding: 20px;
    text-transform: uppercase;
  }

  .menu-hamburguesa ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: contents; /* Para que los elementos hereden el grid */
  }

  .menu-hamburguesa li {
    list-style: none;
    color: white;
    font-size: 20px;
    text-align: center;
    padding: 10px;
  }

  .menu-hamburguesa ul li a {
    color: white;
    font-size: 14px;
    transition: all 0.6s ease;
    padding: 10px;
    border: 2px solid rgb(124, 94, 4); /* Aquí defines el borde amarillo */
    border-radius: 10px;
  }

  .menu-hamburguesa ul li a:hover {
    background: white;
    padding: 10px;
    border-radius: 10px;
    transform: scale(1.05);
    box-shadow: 0 0 10px rgba(246, 190, 4, 0.5);
    color: black;
  }

  /* Media query para pantallas pequeñas */
  @media (max-width: 600px) {
    .header {
      height: 210px; /* Ajusta la altura del header en pantallas pequeñas */
    }

    .header::after {
      background-size: 300px; /* Reduce el tamaño de la imagen en pantallas pequeñas */
    }
  }

  /* Media query para pantallas medianas */
  @media (min-width: 601px) and (max-width: 1024px) {
    .header {
      height: 250px; /* Ajusta la altura del header en pantallas medianas */
    }

    .header::after {
      background-size: 400px; /* Ajusta el tamaño de la imagen para pantallas medianas */
    }
  }

  /* Responsive */
  @media (min-width: 768px) {
    .header {
      height: 350px; /* Ajusta la altura de tu header */
    }

    .header::after {
      background-size: 600px; /* Ajusta el tamaño de la imagen a 600px pantallas grandes */
    }

    .social-icons {
      gap: 10px;
    }

    .boton-hamburguesa {
      display: none;
    }

    .menu-hamburguesa {
      display: flex;
      justify-content: center;
      position: static;
      background: none;
    }

    .menu-hamburguesa ul {
      display: flex;
    }

    .menu-hamburguesa ul li {
      padding: 5px 25px;
    }

    .menu-hamburguesa ul li a {
      font-size: 16px;
      padding: 8px 20px;
    }

    /* Mostrar el menú de navegación solo en escritorio */
    .top-bar .menu-hamburguesa {
      display: flex;
      padding: 5px;
    }
  }

  @media (max-width: 767px) {
    /* Ocultar el menú de navegación en móvil */
    .top-bar .menu-hamburguesa {
      display: none;
    }

    .social-icons {
      gap: 5px;
      font-size: 22px;
    }

    /* Espacio interno y tamaño de los iconos */
    .social-icons a {
      display: inline-block;
      height: 30px;
      width: 30px;
      padding: 5px; /* Ampliamos el espacio interno */
      padding-top: 7px;
      border-radius: 10px; /* Si deseas bordes redondeados */
      text-align: center;
      line-height: 15px; /* Centra el icono verticalmente */
    }
  }

  /* Botones de búsqueda y registro */
  .auth-buttons {
    display: flex;
    align-items: center; /* Asegura que los botones se alineen verticalmente */
    gap: 10px; /* Ajusta el espacio entre botones */
    font-size: 12px;
  }

  .register-button {
    background-color: black;
    color: white;
    padding: 8px 16px;
    border-radius: 5px;
    cursor: pointer;

    transition: background-color 0.3s;
    border: 1px solid rgb(171, 129, 4); /* Aquí defines el borde amarillo */
  }

  /* Estilos para el botón de búsqueda */
  #search-button {
    background-color: black;
    color: white;
    padding: 8px 16px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 30px;
    transition: background-color 0.6s;
    border: 1px solid rgb(26, 26, 26); /* Aquí defines el borde amarillo */
  }

  #search-button:hover {
    background-color: #555;
    color: white;
  }

  /* Estilo específico para el icono de búsqueda */
  .fa-sistrix {
    font-size: 10px;
  }

  /* Estilos para el input de búsqueda */
  .search-input {
    display: none; /* Inicialmente oculto */
    padding: 8px 16px;
    font-size: 16px;
    border-radius: 5px;
    border: 1px solid rgb(171, 129, 4);
    margin-left: 10px;
    transition: opacity 0.3s ease-in-out;
  }

  /* Estilo opcional para que el campo de búsqueda se vea mejor cuando está visible */
  .search-input.show {
    display: inline-block; /* Aparece cuando se le agrega la clase .show */
    opacity: 1;
  }

  .social-icons a.fa-whatsapp,
  .social-icons a.fa-facebook,
  .social-icons a.fa-instagram,
  .social-icons a.fa-tiktok {
    color: white !important; /* Fuerza el color blanco en los íconos */
  }
</style>

<script>
  //
  //boton de hamburguesa
  //

  document.addEventListener("DOMContentLoaded", function () {
    var botonHamburguesa = document.getElementById("boton-hamburguesa");
    if (botonHamburguesa) {
      botonHamburguesa.addEventListener("click", function () {
        var menu = document.getElementById("menu-hamburguesa");
        var icon = this.querySelector("span");

        if (menu) {
          if (menu.style.display === "none" || menu.style.display === "") {
            menu.style.display = "grid"; // Mantén 'grid' en lugar de 'block'
            if (icon) {
              icon.innerHTML = "&#10006;"; // Cambia el ícono a "X"
            }
          } else {
            menu.style.display = "none";
            if (icon) {
              icon.innerHTML = "&#9776;"; // Cambia el ícono a hamburguesa
            }
          }
        }
      });
    }
  });

  //
  //boton de busqueda y input
  //

  document.addEventListener("DOMContentLoaded", function () {
    // Obtener el botón de búsqueda y el input de búsqueda
    const searchButton = document.getElementById("search-button");
    const searchInput = document.getElementById("search-input");

    // Verificar si los elementos existen en el DOM
    if (searchButton && searchInput) {
      // Inicializar el estilo del campo de entrada como "none" para comenzar oculto
      searchInput.style.display = "none";

      // Escuchar el clic en el botón de búsqueda
      searchButton.addEventListener("click", function () {
        // Alternar visibilidad del input de búsqueda
        if (searchInput.style.display === "none") {
          searchInput.style.display = "inline-block"; // Mostrar el campo de texto
          searchInput.focus(); // Poner el foco en el campo para que el usuario pueda escribir
        } else {
          searchInput.style.display = "none"; // Ocultar el campo de texto
        }
      });
    } else {
      console.error("Los elementos de búsqueda no se encuentran en el DOM.");
    }

    //
    //boton de registro y input
    //

    var registerButton = document.querySelector(".register-button");
    if (registerButton) {
      registerButton.addEventListener("click", function () {
        alert("Redirigiendo al registro.");
      });
    }
  });
</script>
