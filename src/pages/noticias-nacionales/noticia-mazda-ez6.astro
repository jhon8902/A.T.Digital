  }

  .noticia-bloque {
    display: flex;
    align-items: center;
    gap: 20px;
    width: 100%;
    margin: 30px auto;
  }

  .noticia-bloque img {
    margin: 10px;
    width: 48%;
    height: auto;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
    transition: transform 0.9s ease;
  }

  .noticia-bloque img:hover {
    transform: scale(1.05);
  }

  .noticia-bloque .noticia-texto {
    flex: 1;
    text-align: start;
    padding: 20px;
    border-radius: 12px;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .noticia-titulo {
    font-size: 36px;
    font-weight: bolder;
    color: black;
    margin-bottom: 10px;
    text-transform: none;
  }

  .noticia-bloque .noticia-parrafo {
    font-size: 20px;
    text-align: start;
    color: #333;

    margin-bottom: 15px; /* Agrega espacio entre los p√°rrafos */
