  /* animacion titulo descripcion */

  @keyframes fadeSlideIn {
    from {
      opacity: 0;
      transform: translateY(20px); /* empieza un poco abajo */
    }
    to {
      opacity: 1;
      transform: translateY(0); /* termina en su lugar */
    }
  }

  .noticia-portada {
    width: 100%;
    height: 900px;
    object-fit: cover;
    padding: 0;
