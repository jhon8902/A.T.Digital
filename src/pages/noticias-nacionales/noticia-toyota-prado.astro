---
// src/pages/noticias-nacionales/noticia-mazda-ez-6.astro
import Layout from "../../layouts/Layout.astro";
import noticiaData from "../../data/noticias.json";
const noticia = noticiaData.find((item) => item.id === 3);
---

{
  noticia ? (
    <Layout title={noticia.titulo} bodyClass="otras-page">
      <section class="noticia-detalle">
        <p class="noticia-descripcion">{noticia.descripcion}</p>

        <img
          src={noticia.imagen}
          alt={noticia.titulo}
          class="noticia-portada"
        />
        <h1>{noticia.titulo}</h1>
        <article>
          {noticia.contenido ? (
            noticia.contenido.map((seccion, index) => (
              <div
                class={`noticia-bloque ${index % 2 === 0 ? "noticia-imagen-izquierda" : "noticia-imagen-derecha"}`}
              >
                <div class="noticia-texto">
                  <h3 class="noticia-titulo">{seccion.titulo}</h3>
                  <p class="noticia-parrafo">{seccion.parrafo}</p>
                  <p class="noticia-parrafo">{seccion.parrafo2}</p>
                </div>
                <img
                  src={seccion.imagen}
                  alt={noticia.titulo}
                  class="noticia-imagen"
                />
              </div>
            ))
          ) : (
            <p>Contenido no disponible</p>
          )}
        </article>
      </section>
    </Layout>
  ) : (
    <p>Noticia no encontrada</p>
  )
}

<style>
  /* Estilos principales */
  .noticia-detalle {
    width: 100%;
    margin: 0;
    padding: 20px 0;
    position: relative;
    background: white;
    font-family: "Georgia", serif;
  }

  /* Título subtitulo kia ev9 */
  .noticia-detalle h1 {
    font-size: 45px;
    text-align: center;
    color: black;
    width: 90%;
    font-weight: 600;
    margin: 0 auto 5px;

    border-bottom: 2px solid #595902;
    padding: 15px;
  }

  /* Título principal */
  .noticia-descripcion {
    font-size: 48px;
    font-weight: bolder;
    text-align: center;
    padding: 30px;
    text-transform: none;

    /* Animación */
    opacity: 0;
    animation: fadeSlideIn 1s ease-out forwards;
    animation-delay: 0.3s; /* leve retraso opcional */
  }

  /* animacion titulo descripcion */

  @keyframes fadeSlideIn {
    from {
      opacity: 0;
      transform: translateY(20px); /* empieza un poco abajo */
    }
    to {
      opacity: 1;
      transform: translateY(0); /* termina en su lugar */
    }
  }

  .noticia-portada {
    width: 100%;
    height: 900px;
    object-fit: cover;
    padding: 0;
    transition: box-shadow 0.4s ease;
  }

  .noticia-portada:hover {
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.6);
  }

  .noticia-bloque {
    display: flex;
    align-items: center;
    gap: 20px;
    width: 100%;
    margin: 30px auto;
  }

  .noticia-bloque img {
    margin: 10px;
    width: 48%;
    height: auto;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
    transition: transform 0.9s ease;
  }

  .noticia-bloque img:hover {
    transform: scale(1.05);
  }

  .noticia-bloque .noticia-texto {
    flex: 1;
    text-align: start;
    padding: 20px;
    border-radius: 12px;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .noticia-titulo {
    font-size: 36px;
    font-weight: bolder;
    color: black;
    margin-bottom: 10px;
    text-transform: none;
  }

  .noticia-bloque .noticia-parrafo {
    font-size: 20px;
    text-align: start;
    color: #333;

    margin-bottom: 15px; /* Agrega espacio entre los párrafos */
    line-height: 1.6; /* Mejora la legibilidad del texto */
  }

  .noticia-imagen-izquierda {
    flex-direction: row;
  }

  .noticia-imagen-derecha {
    flex-direction: row-reverse;
  }

  @media (max-width: 768px) {
    .noticia-bloque {
      flex-direction: column;
    }

    .noticia-detalle h1 {
      font-size: 28px;
      background: none;
      color: black;
      text-shadow: none;
    }

    .noticia-bloque img {
      width: 100%;
      height: auto;
    }

    .noticia-bloque .noticia-texto {
      font-size: 20px;
      text-align: start;
      padding-top: 0;
    }

    .noticia-descripcion {
      font-size: 28px;
      font-weight: bolder;
      padding: 15px;
      text-align: start;
      padding-top: 0;
    }

    .noticia-bloque .noticia-parrafo {
      font-size: 18px;
      color: black;
      padding-top: 5px;
    }

    .noticia-bloque .noticia-texto {
      width: 100%;
    }

    .noticia-titulo {
      font-size: 24px;
    }

    .noticia-portada {
      border-bottom: none;
      width: 100%;
      height: auto;
      object-fit: cover;
    }
  }
</style>
