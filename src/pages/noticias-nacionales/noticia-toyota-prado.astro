---
// src/pages/noticias-nacionales/noticia-mazda-ez-6.astro
import Layout from "../../layouts/Layout.astro";
import noticiaData from "../../data/noticias.json";
const noticia = noticiaData.find((item) => item.id === 3);
---

{
  noticia ? (
    <Layout title={noticia.titulo} bodyClass="otras-page">
      <section class="noticia-detalle">
        <p class="noticia-descripcion">{noticia.descripcion}</p>

        <img
          src={noticia.imagen}
          alt={noticia.titulo}
          class="noticia-portada"
        />
        <h1>{noticia.titulo}</h1>
        <article>
          {noticia.contenido ? (
            noticia.contenido.map((seccion, index) => (
              <div
                class={`noticia-bloque ${index % 2 === 0 ? "noticia-imagen-izquierda" : "noticia-imagen-derecha"}`}
              >
                <div class="noticia-texto">
                  <h3 class="noticia-titulo">{seccion.titulo}</h3>
                  <p class="noticia-parrafo">{seccion.parrafo}</p>
                  <p class="noticia-parrafo">{seccion.parrafo2}</p>
                </div>
                <img
                  src={seccion.imagen}
                  alt={noticia.titulo}
                  class="noticia-imagen"
                />
              </div>
            ))
          ) : (
            <p>Contenido no disponible</p>
          )}
        </article>
      </section>
    </Layout>
  ) : (
    <p>Noticia no encontrada</p>
  )
}

<style>
  /* Contenedor principal */
  .noticia-detalle {
    width: 100%;
    margin: 0;
    padding: 10px 0;
    font-family: "Lora", serif; /* Fuente para el texto principal */
    position: relative;
    background: white;
  }

  /* Título flotante */
  .noticia-detalle h1 {
    font-size: 45px;
    text-align: center;
    color: black;
    font-family: "Lora", serif; /* Fuente para el texto principal */
    margin: 0 auto 5px;
    font-family: "Georgia", serif;
    padding: 15px;
    background: #ffffff;
  }

  .noticia-descripcion {
    font-size: 48px;
    font-weight: 600;
    text-align: center;
    padding: 30px;
    text-transform: uppercase;
    font-family: "Georgia", serif;
    background: #ffffff;
  }

  /* Imagen de portada */
  .noticia-portada {
    width: 100%;
    height: 1024px;
    object-fit: cover;
    padding: 10px;
  }

  /* Bloques alternados */
  .noticia-bloque {
    display: flex;
    align-items: center;
    gap: 20px;
    width: 100%;
    margin: 30px auto;
  }

  .noticia-bloque img {
    width: 50%;
    height: auto;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.8);
    transition: transform 0.9s ease; /*efecto alejamiento zoom*/
  }

  /*efecto alejamiento zoom*/
  .noticia-bloque img:hover {
    transform: scale(0.9); /* Reduce el tamaño de la imagen al 80% */
  }

  .noticia-bloque .noticia-texto {
    flex: 1;
    text-align: start;
    background: #ffffff;
    padding: 20px;
    border-radius: 12px;
    width: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .noticia-titulo {
    font-size: 36px;
    font-weight: 600;
    color: black;
    margin-bottom: 10px;
    text-transform: uppercase;
    font-family: "Georgia", serif;
  }

  .noticia-bloque .noticia-parrafo {
    font-size: 20px;
    color: black;
    font-weight: 400;
    margin-bottom: 15px; /* Agrega espacio entre los párrafos */
    font-family: "Poppins", sans-serif;
    line-height: 1.6; /* Mejora la legibilidad del texto */
  }

  /* Alternar posiciones */
  .noticia-imagen-izquierda {
    flex-direction: row;
  }

  .noticia-imagen-derecha {
    flex-direction: row-reverse;
  }

  /* Responsividad */
  @media (max-width: 768px) {
    .noticia-bloque {
      flex-direction: column;
    }
    .noticia-detalle h1 {
      font-size: 32px;
      background: none;
      color: black;
    }

    .noticia-bloque img {
      width: 100%;
    }

    .noticia-descripcion {
      font-size: 32px;
      font-weight: 600;
      padding: 15px;
      text-align: start;
    }

    .noticia-titulo {
      font-size: 24px;
    }
    .noticia-bloque .noticia-parrafo {
      font-size: 18px;
      color: #333;
    }

    .noticia-bloque .noticia-texto {
      width: 100%;
    }

    .noticia-portada {
      border-bottom: none;
      width: 100%;
      height: auto;
      object-fit: cover;
    }
  }
</style>
