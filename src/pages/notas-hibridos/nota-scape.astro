    font-family: "Lora", serif;
    line-height: 1.6;
  }

  .nota-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .nota-header h1 {
    font-size: 2.8rem;
    font-weight: bold;
    color: white;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    animation: fadeIn 2s ease-in-out;
    background: #19354b;
    text-transform: uppercase;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .nota-header .subtitulo {
    font-size: 1.2rem;
    color: #555;
    margin-top: 10px;
  }

  .nota-content {
    display: flex;
