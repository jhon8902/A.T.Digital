  }

  .nota-texto p {
    font-size: 1.8rem;
    color: black;
    margin-bottom: 20px;
  }

  @media (min-width: 768px) {
    .nota-content {
      flex-direction: row;
    }

    .nota-imagen {
      flex: 1;
      margin-right: 20px;
    }

    .nota-texto {
      flex: 2;
    }
  }

  .btn-more-info {
    background-color: #007bff;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
